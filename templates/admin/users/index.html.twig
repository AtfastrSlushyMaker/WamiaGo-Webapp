{% extends 'admin/base.html.twig' %}

{% block title %}User Management{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/user-management-enhanced.css') }}" rel="stylesheet">
    <style>
        /* Additional custom styles for this template */
        .table th {
            font-size: 0.85rem;
            font-weight: 600;
            text-transform: uppercase;
        }
        
        .badge {
            font-weight: 500;
            padding: 0.5em 0.75em;
        }
        
        .user-avatar-sm {
            width: 35px;
            height: 35px;
            border-radius: 50%;
            object-fit: cover;
        }
        
        .btn-group .btn {
            border-radius: 0.25rem;
            margin: 0 2px;
        }
        
        /* Status colors */
        .badge.bg-client {
            background-color: #17a2b8 !important;
        }
        
        .badge.bg-admin {
            background-color: #0d6efd !important;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container-fluid py-4">
        <div class="card mb-4 shadow-sm">
            <div class="card-header d-flex justify-content-between align-items-center bg-gradient-primary text-white">
                <h5 class="mb-0">User Management</h5>
                <div>
                    <button type="button" class="btn btn-light" id="add-user-btn" data-bs-toggle="modal" data-bs-target="#addUserModal">
                        <i class="fas fa-plus me-2"></i> Add User
                    </button>
                </div>
            </div>
            <div class="card-body">
                <!-- Filters & Search -->
                <div class="row mb-4 g-3">
                    <div class="col-md-4">
                        <div class="search-container">                            <input type="text" id="user-search" class="form-control" placeholder="Search users...">
                            <button class="btn-clear" id="clear-search" type="button" style="display: none;">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="d-flex flex-wrap gap-2 justify-content-md-end">
                            <select id="filter-role" class="form-select filter-dropdown">
                                <option value="">All Roles</option>
                                <option value="CLIENT">Client</option>
                                <option value="ADMIN">Admin</option>
                            </select>
                            <select id="filter-status" class="form-select filter-dropdown">
                                <option value="">All Account Status</option>
                                <option value="ACTIVE">Active</option>
                                <option value="SUSPENDED">Suspended</option>
                                <option value="BANNED">Banned</option>
                            </select>
                            <select id="filter-verified" class="form-select filter-dropdown">
                                <option value="">All Verification</option>
                                <option value="1">Verified</option>
                                <option value="0">Unverified</option>
                            </select>
                            <select id="page-size" class="form-select filter-dropdown">
                                <option value="10">10 per page</option>
                                <option value="25">25 per page</option>
                                <option value="50">50 per page</option>
                                <option value="100">100 per page</option>
                            </select>
                        </div>
                    </div>
                </div>

                <!-- View Toggles -->
                <div class="d-flex justify-content-between mb-3">
                    <div class="view-toggle btn-group">
                        <button id="list-view-btn" class="btn btn-outline-primary active">
                            <i class="fas fa-list me-1"></i> List View
                        </button>
                        <button id="card-view-btn" class="btn btn-outline-primary">
                            <i class="fas fa-th-large me-1"></i> Card View
                        </button>
                    </div>
                    <div class="d-flex align-items-center text-muted">
                        Showing <span id="showing-results" class="fw-bold mx-1">0</span> of 
                        <span id="total-results" class="fw-bold mx-1">0</span> users
                    </div>
                </div>

                <!-- Loading Overlay -->
                <div id="loading-overlay" style="display: none;">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>

                <!-- List View -->
                <div id="list-view" class="mb-3">                    <div class="table-responsive">
                        <table class="table table-hover align-middle" id="users-table">
                            <thead>
                                <tr>
                                    <th style="width: 3%">#</th>
                                    <th style="width: 18%">User</th>
                                    <th style="width: 15%">Contact Info</th>
                                    <th style="width: 10%">Date of Birth</th>
                                    <th style="width: 7%">Gender</th>
                                    <th style="width: 7%">Role</th>
                                    <th style="width: 10%">Status</th>
                                    <th style="width: 10%">Verification</th>
                                    <th style="width: 20%">Actions</th>
                                </tr>
                            </thead>
                            <tbody id="users-table-body">
                                <!-- User data will be loaded here dynamically -->
                                <tr>
                                    <td colspan="9" class="text-center py-4">
                                        <div class="spinner-border text-primary" role="status">
                                            <span class="visually-hidden">Loading users...</span>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Card View -->
                <div id="card-view" class="mb-3" style="display: none;">
                    <div id="users-cards" class="row">
                        <!-- User cards will be loaded here dynamically -->
                        <div class="col-12 text-center py-4">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Loading users...</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Pagination -->
                <div class="d-flex justify-content-between align-items-center">
                    <div class="text-muted">
                        <select id="goto-page" class="form-select form-select-sm d-inline-block" style="max-width: 80px;">
                            <!-- Page options will be added dynamically -->
                        </select>
                        <span class="ms-2">Go to page</span>
                    </div>
                    <div class="pagination-container">
                        <nav aria-label="User pagination">
                            <ul class="pagination mb-0">
                                <!-- Pagination will be built dynamically -->
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Add User Modal -->
    <div class="modal fade" id="addUserModal" tabindex="-1" aria-labelledby="addUserModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title" id="addUserModalLabel">Add New User</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form id="addUserForm">
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="add-name" class="form-label">Full Name</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                                    <input type="text" class="form-control" id="add-name" name="name" required>
                                </div>
                                <div class="invalid-feedback" id="add-name-error"></div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="add-email" class="form-label">Email Address</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                    <input type="email" class="form-control" id="add-email" name="email" required>
                                </div>
                                <div class="invalid-feedback" id="add-email-error"></div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="add-password" class="form-label">Password</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                    <input type="password" class="form-control" id="add-password" name="password" required>
                                </div>
                                <div class="invalid-feedback" id="add-password-error"></div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="add-phone" class="form-label">Phone Number</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-phone"></i></span>
                                    <input type="tel" class="form-control" id="add-phone" name="phone_number" required>
                                </div>
                                <div class="invalid-feedback" id="add-phone-error"></div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="add-role" class="form-label">Role</label>
                                <select class="form-select" id="add-role" name="role">
                                    <option value="CLIENT">Client</option>
                                    <option value="ADMIN">Administrator</option>
                                </select>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="add-gender" class="form-label">Gender</label>
                                <select class="form-select" id="add-gender" name="gender">
                                    <option value="MALE">Male</option>
                                    <option value="FEMALE">Female</option>
                                    <option value="OTHER">Other</option>
                                </select>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="add-status" class="form-label">Account Status</label>
                                <select class="form-select" id="add-status" name="account_status">
                                    <option value="ACTIVE">Active</option>
                                    <option value="SUSPENDED">Suspended</option>
                                    <option value="BANNED">Banned</option>
                                </select>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="add-dob" class="form-label">Date of Birth</label>
                                <input type="date" class="form-control" id="add-dob" name="date_of_birth">
                            </div>
                            <div class="col-12 mb-3">
                                <label for="add-profile-pic" class="form-label">Profile Picture URL</label>
                                <input type="url" class="form-control" id="add-profile-pic" name="profilePicture" placeholder="https://example.com/image.jpg">
                            </div>
                            <div class="col-12 mb-3">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="1" id="add-verified" name="is_verified">
                                    <label class="form-check-label" for="add-verified">
                                        Mark as verified
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary" id="add-user-submit">
                            <span class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                            Add User
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Edit User Modal -->
    <div class="modal fade" id="edit-user-modal" tabindex="-1" aria-labelledby="editUserModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title" id="editUserModalLabel">Edit User</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form id="editUserForm">
                    <div class="modal-body">
                        <input type="hidden" id="edit-id" name="id_user">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="edit-name" class="form-label">Full Name</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                                    <input type="text" class="form-control" id="edit-name" name="name" required>
                                </div>
                                <div class="invalid-feedback" id="edit-name-error"></div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="edit-email" class="form-label">Email Address</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                    <input type="email" class="form-control" id="edit-email" name="email" required>
                                </div>
                                <div class="invalid-feedback" id="edit-email-error"></div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="edit-phone" class="form-label">Phone Number</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-phone"></i></span>
                                    <input type="tel" class="form-control" id="edit-phone" name="phone_number" required>
                                </div>
                                <div class="invalid-feedback" id="edit-phone-error"></div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="edit-role" class="form-label">Role</label>
                                <select class="form-select" id="edit-role" name="role">
                                    <option value="CLIENT">Client</option>
                                    <option value="ADMIN">Administrator</option>
                                </select>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="edit-gender" class="form-label">Gender</label>
                                <select class="form-select" id="edit-gender" name="gender">
                                    <option value="MALE">Male</option>
                                    <option value="FEMALE">Female</option>
                                    <option value="OTHER">Other</option>
                                </select>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="edit-status" class="form-label">Account Status</label>
                                <select class="form-select" id="edit-status" name="account_status">
                                    <option value="ACTIVE">Active</option>
                                    <option value="SUSPENDED">Suspended</option>
                                    <option value="BANNED">Banned</option>
                                </select>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="edit-dob" class="form-label">Date of Birth</label>
                                <input type="date" class="form-control" id="edit-dob" name="date_of_birth">
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="edit-profile-pic" class="form-label">Profile Picture URL</label>
                                <input type="url" class="form-control" id="edit-profile-pic" name="profilePicture" placeholder="https://example.com/image.jpg">
                                <div class="form-text">Leave blank to keep current image</div>
                            </div>
                            <div class="col-12 mb-3">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="1" id="edit-verified" name="is_verified">
                                    <label class="form-check-label" for="edit-verified">
                                        Mark as verified
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary" id="edit-user-submit">
                            <span class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                            Save Changes
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Delete User Modal -->
    <div class="modal fade" id="delete-user-modal" tabindex="-1" aria-labelledby="deleteUserModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title" id="deleteUserModalLabel">Confirm Deletion</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete user: <strong id="delete-user-name"></strong>?</p>
                    <p class="text-danger"><i class="fas fa-exclamation-triangle me-2"></i> This action cannot be undone!</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-danger" id="confirm-delete-btn">
                        <span class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                        Delete User
                    </button>
                </div>
            </div>
        </div>
    </div>
    
    <!-- View User Modal -->
    {% include 'admin/users/view.html.twig' %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/debug-api.js') }}"></script>
    <script src="{{ asset('js/user-management-enhanced.js') }}"></script>
    <script src="{{ asset('js/view-user-modal.js') }}"></script>
    <script>
        // Debug any errors during page load
        window.addEventListener('error', function(e) {
            console.error('Global error:', e.message, e);
        });
        
        // Set up API endpoints for user management
        window.apiBaseUrl = '{{ path('api_base_url')|default('/api') }}';
        window.userUpdateUrl = '{{ path('api_update_user', {'id': 'USER_ID'})|default('/api/users/USER_ID/update') }}';
        window.userVerifyUrl = '{{ path('api_verify_user', {'id': 'USER_ID'})|default('/api/users/USER_ID/verify') }}';
        window.userDeleteUrl = '{{ path('api_delete_user', {'id': 'USER_ID'})|default('/api/users/USER_ID/delete') }}';
    </script>
{% endblock %}