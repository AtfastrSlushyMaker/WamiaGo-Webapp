            // Toast notification function
            function showToast(type, message) {
                // Check if Toast notification library is available
                if (typeof toastr !== 'undefined') {
                    // Configure toastr options
                    toastr.options = {
                        closeButton: true,
                        progressBar: true,
                        positionClass: 'toast-top-right',
                        timeOut: 3000,
                        showMethod: 'fadeIn',
                        hideMethod: 'fadeOut'
                    };
                    
                    toastr[type](message);
