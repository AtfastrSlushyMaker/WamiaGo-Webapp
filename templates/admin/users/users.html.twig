                    })
                    .then(function(data) {
                        hideLoading();
                        
                        if (data.success) {
                            // Close modal
                            addUserModal.hide();
                            
                            // Refresh user list
                            loadUsers();
                            showToast('success', data.message || 'User created successfully');
                            
                            // Show success animation
                            showFloatingSuccess('New user created successfully');
