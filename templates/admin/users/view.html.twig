{% extends 'admin/users/_modal.html.twig' %}

{% block modal_id %}view-user-modal{% endblock %}
{% block modal_title %}
    <i class="fas fa-user me-2"></i>User Details
{% endblock %}

{% block modal_body %}
    <div class="user-profile-view">
        <!-- User Header -->
        <div class="text-center mb-4 position-relative">
            <div class="profile-cover-img bg-gradient-primary-to-secondary mb-3" style="height: 100px; border-radius: 8px;"></div>
            <div class="avatar-container position-relative" style="margin-top: -50px;">
                <img id="view-user-avatar" src="/images/default-avatar.png" alt="User Avatar" class="rounded-circle border border-4 border-white shadow" style="width: 100px; height: 100px; object-fit: cover;">
                <span id="view-user-status-badge" class="position-absolute bottom-0 end-0 badge rounded-pill bg-success">
                    <i class="fas fa-check-circle"></i>
                </span>
            </div>
            <h4 id="view-user-name" class="mt-2 mb-0">User Name</h4>
            <p id="view-user-email" class="text-muted mb-0">user@example.com</p>
            <div class="mt-2">
                <span id="view-user-role-badge" class="badge bg-primary me-1">Role</span>
                <span id="view-user-verification-badge" class="badge bg-success">Verified</span>
            </div>
        </div>
        
        <div class="row g-4">
            <!-- User Info Column -->
            <div class="col-md-6">
                <div class="card h-100">
                    <div class="card-header bg-light">
                        <h5 class="card-title mb-0"><i class="fas fa-info-circle me-2"></i>Basic Information</h5>
                    </div>
                    <div class="card-body">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item d-flex justify-content-between">
                                <span class="text-muted"><i class="fas fa-id-card me-2"></i>ID:</span>
                                <span id="view-user-id" class="fw-bold"></span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between">
                                <span class="text-muted"><i class="fas fa-phone me-2"></i>Phone:</span>
                                <span id="view-user-phone" class="fw-bold"></span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between">
                                <span class="text-muted"><i class="fas fa-venus-mars me-2"></i>Gender:</span>
                                <span id="view-user-gender" class="fw-bold"></span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between">
                                <span class="text-muted"><i class="fas fa-birthday-cake me-2"></i>Birth Date:</span>
                                <span id="view-user-dob" class="fw-bold"></span>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            
            <!-- Account Status Column -->
            <div class="col-md-6">
                <div class="card h-100">
                    <div class="card-header bg-light">
                        <h5 class="card-title mb-0"><i class="fas fa-user-shield me-2"></i>Account Status</h5>
                    </div>
                    <div class="card-body">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item d-flex justify-content-between">
                                <span class="text-muted"><i class="fas fa-shield-alt me-2"></i>Status:</span>
                                <span id="view-user-account-status" class="fw-bold"></span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between">
                                <span class="text-muted"><i class="fas fa-check-circle me-2"></i>Verified:</span>
                                <span id="view-user-verified" class="fw-bold"></span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between">
                                <span class="text-muted"><i class="fas fa-key me-2"></i>Role:</span>
                                <span id="view-user-role" class="fw-bold"></span>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Additional Actions -->
        <div class="card mt-4">
            <div class="card-header bg-light">
                <h5 class="card-title mb-0"><i class="fas fa-tools me-2"></i>Actions</h5>
            </div>
            <div class="card-body">
                <div class="d-flex flex-wrap gap-2">
                    <div class="btn-group" role="group" id="status-action-group">
                        <button id="view-user-activate-btn" type="button" class="btn btn-success">
                            <i class="fas fa-user-check me-1"></i> Activate
                        </button>
                        <button id="view-user-suspend-btn" type="button" class="btn btn-warning">
                            <i class="fas fa-user-clock me-1"></i> Suspend
                        </button>
                        <button id="view-user-ban-btn" type="button" class="btn btn-danger">
                            <i class="fas fa-user-slash me-1"></i> Ban
                        </button>
                    </div>
                    
                    <button id="view-user-verify-btn" type="button" class="btn btn-info">
                        <i class="fas fa-user-check me-1"></i> Verify
                    </button>
                    
                    <div class="btn-group ms-auto" role="group">
                        <button id="view-user-edit-btn" type="button" class="btn btn-primary">
                            <i class="fas fa-edit me-1"></i> Edit
                        </button>
                        <button id="view-user-delete-btn" type="button" class="btn btn-danger">
                            <i class="fas fa-trash-alt me-1"></i> Delete
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block modal_footer %}
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
        <i class="fas fa-times me-1"></i> Close
    </button>
{% endblock %} 