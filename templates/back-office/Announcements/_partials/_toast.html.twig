<div class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 1100">
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="toast show align-items-center text-white bg-{{ label }} border-0 mb-3" role="alert" aria-live="assertive" aria-atomic="true" data-bs-autohide="true" data-bs-delay="5000">
                <div class="d-flex">
                    <div class="toast-body">
                        <i class="fas fa-{{ label == 'success' ? 'check-circle' : 'exclamation-circle' }} me-2"></i>
                        {{ message }}
                    </div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
                <div class="toast-progress bg-white opacity-25" style="height: 3px;"></div>
            </div>
        {% endfor %}
    {% endfor %}
</div>