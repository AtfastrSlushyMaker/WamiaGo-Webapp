{% extends 'back-office/base.html.twig' %}

{% block title %}Admin | Announcement Details #{{ announcement.id_announcement }}{% endblock %}

{% block content %}
<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Announcement Details</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="{{ path('admin_dashboard') }}">Dashboard</a></li>
                        <li class="breadcrumb-item"><a href="{{ path('admin_announcements_index') }}">Announcements</a></li>
                        <li class="breadcrumb-item active">Details</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>

    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-8">
                    <div class="card card-primary card-outline elevation-2">
                        <div class="card-header">
                            <h3 class="card-title"><i class="fas fa-info-circle mr-2"></i>Announcement Information</h3>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-4 text-center mb-4">
                                    <div class="announcement-icon-container">
                                        <img src="{{ asset('adminlte/images/icons/announcement-3d.png') }}" 
                                             alt="Announcement" class="img-fluid">
                                    </div>
                                    <div class="mt-3">
                                        <span class="badge badge-pill badge-{{ announcement.status ? 'success' : 'secondary' }} p-2">
                                            <i class="fas fa-{{ announcement.status ? 'check' : 'times' }}-circle mr-1"></i>
                                            {{ announcement.status ? 'Active' : 'Inactive' }}
                                        </span>
                                    </div>
                                </div>
                                <div class="col-md-8">
                                    <h4 class="text-primary mb-3">{{ announcement.title }}</h4>
                                    
                                    <div class="info-item">
                                        <span class="info-label"><i class="fas fa-hashtag mr-2"></i>ID:</span>
                                        <span class="info-value">{{ announcement.id_announcement }}</span>
                                    </div>
                                    
                                    <div class="info-item">
                                        <span class="info-label"><i class="fas fa-map-marker-alt mr-2"></i>Zone:</span>
                                        <span class="badge badge-pill" style="background-color: {{ announcement.zone.getColor() }}; color: #fff;">
                                            {{ announcement.zone.getDisplayName() }}
                                        </span>
                                    </div>
                                    
                                    <div class="info-item">
                                        <span class="info-label"><i class="far fa-calendar-alt mr-2"></i>Date:</span>
                                        <span class="info-value">{{ announcement.date|date('F d, Y H:i') }}</span>
                                    </div>
                                    
                                    <div class="content-section mt-4">
                                        <h5><i class="fas fa-align-left mr-2"></i>Content:</h5>
                                        <div class="p-3 bg-light rounded">
                                            {{ announcement.content|nl2br }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card card-info card-outline elevation-2">
                        <div class="card-header">
                            <h3 class="card-title"><i class="fas fa-user-tie mr-2"></i>Driver Information</h3>
                        </div>
                        <div class="card-body">
                            <div class="text-center mb-4">
                                <div class="driver-avatar">
                                    <img src="{{ asset('adminlte/images/driver-avatar.png') }}" alt="Driver" class="img-circle elevation-2" width="100">
                                </div>
                            </div>
                            
                            <div class="info-item">
                                <span class="info-label"><i class="fas fa-user mr-2"></i>Name:</span>
                                <span class="info-value">{{ announcement.driver.user.name }}</span>
                            </div>
                            
                            <div class="info-item">
                                <span class="info-label"><i class="fas fa-envelope mr-2"></i>Email:</span>
                                <span class="info-value">{{ announcement.driver.user.email }}</span>
                            </div>
                            
                            <div class="info-item">
                                <span class="info-label"><i class="fas fa-phone mr-2"></i>Phone:</span>
                                <span class="info-value">{{ announcement.driver.user.phoneNumber }}</span>
                            </div>
                            
                            <div class="text-center mt-4">
                                <a href="#" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-history mr-1"></i> View Driver History
                                </a>
                                <a href="#" class="btn btn-sm btn-outline-info mt-2">
                                    <i class="fas fa-envelope mr-1"></i> Contact Driver
                                </a>
                            </div>
                        </div>
                    </div>
                    
                    <div class="card card-danger card-outline elevation-2 mt-4">
                        <div class="card-header">
                            <h3 class="card-title"><i class="fas fa-cog mr-2"></i>Actions</h3>
                        </div>
                        <div class="card-body">
                            <a href="{{ path('admin_announcements_index') }}" class="btn btn-outline-secondary btn-block mb-3">
                                <i class="fas fa-arrow-left mr-1"></i> Back to List
                            </a>
                            
                            <button type="button" class="btn btn-danger btn-block" data-toggle="modal" data-target="#confirmDeleteModal">
                                <i class="fas fa-trash mr-1"></i> Delete Announcement
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="confirmDeleteModal" tabindex="-1" role="dialog" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-danger">
                <h5 class="modal-title" id="confirmDeleteModalLabel"><i class="fas fa-exclamation-triangle mr-2"></i>Delete Confirmation</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this announcement? This action cannot be undone.</p>
                <div class="alert alert-warning">
                    <i class="fas fa-info-circle mr-2"></i>Deleting this announcement will remove it permanently from the system.
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <form method="post" action="{{ path('admin_announcements_delete', {'id': announcement.id_announcement}) }}">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ announcement.id_announcement) }}">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash mr-1"></i> Delete
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('adminlte/js/announcement-details.js') }}"></script>
{% endblock %}