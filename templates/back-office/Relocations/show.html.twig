{% extends 'back-office/base.html.twig' %}

{% block title %}Admin | Relocation #{{ relocation.id_relocation }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('adminlte/css/custom-relocations.css') }}">
{% endblock %}

{% block content %}
<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1><i class="fas fa-truck-moving"></i> Relocation Details</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="{{ path('admin_dashboard') }}">Dashboard</a></li>
                        <li class="breadcrumb-item"><a href="{{ path('admin_relocations_index') }}">Relocations</a></li>
                        <li class="breadcrumb-item active">Details</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>

    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-8">
                    <div class="card card-primary card-outline">
                        <div class="card-header">
                            <div class="d-flex justify-content-between align-items-center">
                                <h3 class="card-title">
                                    <i class="fas fa-info-circle mr-2"></i>Relocation Information
                                </h3>
                                <a href="{{ path('admin_relocations_index') }}" class="btn btn-sm btn-default">
                                <img src="{{ asset('adminlte/images/icons/back-arrow.png') }}" 
                 alt="Back" 
                 class="btn-icon animated-icon mr-1"
                 style="width: 16px; height: 16px;">
                                    <i class="fas fa-arrow-left mr-1"></i> Back
                                </a>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-4 text-center">
                                    <img src="{{ asset('adminlte/images/relocation-3d.png') }}" 
                                         alt="Relocation" 
                                         class="img-fluid img-3d img-3d-animated" 
                                         style="max-height: 200px;">
                                </div>
                                <div class="col-md-8">
                                    <h3 class="text-primary mb-4">Relocation #{{ relocation.id_relocation }}</h3>
                                    
                                    <div class="info-grid mb-4">
                                        <div class="info-item">
                                            <span class="info-label"><i class="fas fa-calendar-alt mr-2"></i>Date:</span>
                                            <span class="info-value">{{ relocation.date|date('F j, Y \\a\\t H:i') }}</span>
                                        </div>
                                        <div class="info-item">
                                            <span class="info-label"><i class="fas fa-money-bill-wave mr-2"></i>Cost:</span>
                                            <span class="info-value">{{ relocation.cost }} TND</span>
                                        </div>
                                        <div class="info-item">
                                            <span class="info-label"><i class="fas fa-info-circle mr-2"></i>Status:</span>
                                            <span class="info-value">
                                                <span class="badge badge-{{ relocation.status ? 'success' : 'secondary' }}">
                                                    {{ relocation.status ? 'Active' : 'Inactive' }}
                                                </span>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-4">
                    <div class="card card-info card-outline">
                        <div class="card-header">
                            <h3 class="card-title"><i class="fas fa-calendar-check mr-1"></i> Related Reservation</h3>
                        </div>
                        <div class="card-body">
                            <h5>
                                <a href="{{ path('admin_reservations_show', {'id': relocation.reservation.id_reservation}) }}">
                                    #{{ relocation.reservation.id_reservation }}
                                </a>
                            </h5>
                            <p class="text-muted">
                                {{ relocation.reservation.announcement.title }}
                            </p>
                            <div class="info-item">
                                <span class="info-label"><i class="fas fa-map-marker-alt mr-2"></i>From:</span>
                                <span class="info-value">{{ relocation.reservation.startLocation.address }}</span>
                            </div>
                            <div class="info-item">
                                <span class="info-label"><i class="fas fa-flag-checkered mr-2"></i>To:</span>
                                <span class="info-value">{{ relocation.reservation.endLocation.address }}</span>
                            </div>
                            <div class="info-item">
                                <span class="info-label"><i class="fas fa-user mr-2"></i>Client:</span>
                                <span class="info-value">{{ relocation.reservation.user.name }}</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
{% endblock %}