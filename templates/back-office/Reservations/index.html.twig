{% extends 'back-office/base.html.twig' %}

{% block title %}Admin | Reservations Management{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('adminlte/css/custom-reservations.css') }}">
{% endblock %}

{% block content %}
<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Reservations</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="{{ path('admin_dashboard') }}">Dashboard</a></li>
                        <li class="breadcrumb-item active">Reservations</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>

    <section class="content">
        <div class="container-fluid">
            <div class="card card-primary card-outline elevation-3">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-calendar-check mr-2"></i>Reservations List
                    </h3>
                    <div class="card-tools">
                        <button id="exportAllPdfBtn" class="btn btn-sm btn-danger">
                            <i class="fas fa-file-pdf mr-1"></i> Export All to PDF
                        </button>
                    </div>
                </div>
                <div class="card-body table-responsive p-0">
                    <table class="table table-hover text-nowrap">
                        <thead class="thead-light">
                            <tr>
                                <th>ID</th>
                                <th>Announcement</th>
                                <th>Client</th>
                                <th>Start Location</th>
                                <th>End Location</th>
                                <th>Date</th>
                                <th>Status</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for reservation in reservations %}
                            <tr data-id="{{ reservation.id_reservation }}">
                                <td data-label="ID">{{ reservation.id_reservation }}</td>
                                <td data-label="Announcement">{{ reservation.announcement.title }}</td>
                                <td data-label="Client">{{ reservation.user.name }}</td>
                                <td data-label="Start Location">{{ reservation.startLocation.address }}</td>
                                <td data-label="End Location">{{ reservation.endLocation.address }}</td>
                                <td data-label="Date">{{ reservation.date|date('M d, Y H:i') }}</td>
                                <td data-label="Status">
    <span class="badge badge-pill" style="background-color: {{ reservation.status.getColor() }}; color: #fff;">
        <i class="fas fa-{{ reservation.status.getIcon() }} mr-1"></i>
        {{ reservation.status.getDisplayName() }}
    </span>
</td>
                                <td class="text-center" data-label="Actions">
                                    <div class="btn-group action-buttons">
                                        <a href="{{ path('admin_reservations_show', {'id': reservation.id_reservation}) }}" 
                                           class="btn btn-action btn-view" 
                                           data-toggle="tooltip" 
                                           title="View Details">
                                           <i class="fas fa-eye"></i>
                                           <span class="btn-label">Details</span>
                                        </a>

                                        <button class="btn btn-action btn-delete delete-btn" 
                                                data-id="{{ reservation.id_reservation }}"
                                                data-title="Reservation #{{ reservation.id_reservation }}"
                                                data-token="{{ csrf_token('delete' ~ reservation.id_reservation) }}"
                                                data-bs-toggle="modal" 
                                                data-bs-target="#deleteModal"
                                                data-toggle="tooltip" 
                                                title="Delete Reservation">
                                            <i class="fas fa-trash-alt"></i>
                                            <span class="btn-label">Delete</span>
                                        </button>
                                        
                                    </div>
                                </td>
                            </tr>
                            {% else %}
                            <tr>
                                <td colspan="8" class="text-center py-4">
                                    <img src="{{ asset('adminlte/images/empty-data.svg') }}" alt="No data" width="120" class="mb-3 img-3d">
                                    <h5 class="text-muted">No reservations found</h5>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                <div class="card-footer clearfix">
                    <div class="float-right">
                        {{ knp_pagination_render(reservations, '@KnpPaginator/Pagination/twitter_bootstrap_v4_pagination.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
{% include 'back-office/Reservations/_partials/_delete_modal.html.twig' %}
{% include 'back-office/Reservations/_partials/_toast.html.twig' %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('adminlte/js/reservations.js') }}"></script>
    <script >
    document.getElementById('exportAllPdfBtn').addEventListener('click', async (e) => {
    e.preventDefault();
    
    const btn = e.currentTarget;
    
    try {
        btn.disabled = true;
        btn.classList.add('button-loading');

        const response = await fetch('{{ path('admin_reservations_export_all') }}');

        if (!response.ok) {
            throw new Error('Erreur lors de la génération du PDF');
        }

        const blob = await response.blob();
        const downloadUrl = window.URL.createObjectURL(blob);

        const a = document.createElement('a');
        a.href = downloadUrl;
        const filename = response.headers.get('Content-Disposition')?.split('filename=')[1]?.replaceAll('"', '') || 'reservations.pdf';
        a.download = filename;
        document.body.appendChild(a);
        a.click();
        document.body.removeChild(a);

        showToast('success', 'PDF exported successfully!');
    } catch (error) {
        console.error(error);
        showToast('error', 'Failed to export PDF.');
    } finally {
        btn.disabled = false;
        btn.classList.remove('button-loading');
    }
});

// Gestion des PDF individuels
document.querySelectorAll('.btn-pdf').forEach(btn => {
    btn.addEventListener('click', async (e) => {
        e.preventDefault();
        const url = e.currentTarget.href;
        const icon = e.currentTarget.querySelector('i');
        const originalIcon = icon.className;
        
        try {
            // Show loading state
            btn.classList.add('generating-pdf');
            icon.className = 'fas fa-spinner fa-spin';
            
            const response = await fetch(url);
            if (!response.ok) throw new Error('PDF generation failed');
            
            const blob = await response.blob();
            const downloadUrl = window.URL.createObjectURL(blob);
            
            // Create and trigger download
            const a = document.createElement('a');
            a.href = downloadUrl;
            a.download = 'reservation_details.pdf';
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            
            // Show success toast
            showToast('success', 'PDF generated successfully');
            
        } catch (error) {
            console.error('PDF Error:', error);
            showToast('error', 'Failed to generate PDF');
        } finally {
            // Reset button state
            btn.classList.remove('generating-pdf');
            icon.className = originalIcon;
        }
    });
});
    </script>
{% endblock %}