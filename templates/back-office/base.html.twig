                background: rgba(255, 255, 255, 0.2);
                color: #fff;
                font-weight: 600;
            }

            .nav-icon {
                font-size: 1.2rem;
                min-width: 24px;
                margin-right: 10px;
                text-align: center;
            }

            /* Logout button styling */
            .logout-container {
                margin-top: auto;
                padding: 20px 0;
            }

            .logout-btn {
                display: flex;
                align-items: center;
                padding: 12px 15px;
                background-color: #dc3545;
                color: white;
                border-radius: 10px;
                text-decoration: none;
                transition: all 0.2s ease;
                width: auto;
                max-width: 150px;
            }

            .logout-btn:hover {
                background-color: #bb2d3b;
                color: white;
                transform: translateX(5px);
            }

            .logout-btn i {
                font-size: 1.2rem;
                margin-right: 10px;
            }

            /* Footer */
            .sidebar-footer {
                padding-top: 15px;
                text-align: center;
                font-size: 0.8rem;
                color: rgba(255, 255, 255, 0.5);
            }

            /* Topbar specific styles */
            .app-header {
                position: sticky;
                top: 0;
                right: 0;
                left: 280px;
                z-index: 998;
                height: 60px;
                padding: 0;
                transition: all 0.3s ease;
            }

            /* Logo styles */
            .logo-link {
                display: flex !important;
                align-items: center;
                padding: 0.5rem 1rem;
                text-decoration: none;
            }

            .topbar-logo {
                height: 36px;
                width: auto;
                margin-right: 0.5rem;
            }

            .logo-text {
                color: #0d6efd;
                font-size: 1.2rem;
            }

            .app-header .navbar-nav .nav-link {
                padding: 0.5rem 1rem;
                color: #6c757d;
                position: relative;
                display: flex;
                align-items: center;
            }

            .app-header .navbar-nav .nav-link:hover {
                color: #0d6efd;
            }

            /* Badge positioning */
            .navbar-badge {
                position: absolute;
                top: 0;
                right: 2px;
                font-size: 0.6rem;
                padding: 2px 4px;
            }

            /* User dropdown menu */
            .user-image {
                width: 32px;
                height: 32px;
                object-fit: cover;
                transition: all 0.2s ease;
            }

            .user-menu .dropdown-menu {
                border: none;
                padding: 0;
                width: 280px;
            }

            .user-header {
                border-top-left-radius: 0.375rem;
                border-top-right-radius: 0.375rem;
            }

            .user-footer {
                background-color: #f8f9fa;
                border-bottom-left-radius: 0.375rem;
                border-bottom-right-radius: 0.375rem;
            }

            /* Dropdown positioning */
            .dropdown-menu {
                animation: dropdown-animation 0.2s ease forwards;
            }

            /* Notifications styling */
            .dropdown-item {
                padding: 0.5rem 1rem;
                white-space: normal;
            }

            .dropdown-header {
                font-weight: 600;
                padding: 0.5rem 1rem;
            }

            .dropdown-footer {
                font-weight: 500;
                color: #0d6efd;
                text-align: center;
                padding: 0.5rem;
                display: block;
            }

            .dropdown-divider {
                margin: 0;
            }

            /* Live clock */
            #live-clock {
                font-size: 0.85rem;
            }

            /* Responsiveness adjustments */
            @media (max-width: 991.98px) {
                #sidebar {
                    width: 280px;
                    margin-left: -280px;
                }

                #sidebar.active {
                    margin-left: 0;
                }

                .app-header {
                    left: 0;
                }

                .app-main {
                    margin-left: 0;
                }

                body.sidebar-active .app-main {
                    margin-left: 0;
                }

                body.sidebar-active::before {
                    content: '';
                    position: fixed;
                    top: 0;
                    left: 0;
                    width: 100%;
                    height: 100%;
                    background: rgba(0, 0, 0, 0.5);
                    z-index: 998;
                }

                .custom-menu {
                    right: -45px;
                }
            }

            @keyframes dropdown-animation {
                from {
                    opacity: 0;
                    transform: translateY(-10px);
                }
                to {
                    opacity: 1;
                    transform: translateY(0);
                }
            }
        </style>
    {% endblock %}

