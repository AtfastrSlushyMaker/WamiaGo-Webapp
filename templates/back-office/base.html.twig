            /* Sidebar core styles */
            #sidebar {
                width: 280px;
                background: #0d6efd;
                color: #fff;
                position: fixed;
                height: 100vh;
                top: 0;
                left: 0;
                z-index: 999;
                transition: all 0.3s ease;
                box-shadow: 0 0 15px rgba(0, 0, 0, 0.15);
            }

            /* Hidden sidebar state */
            #sidebar.active {
                margin-left: -280px;
            }

            /* Main content area spacing */
            .app-main {
                margin-left: 280px;
                transition: margin-left 0.3s ease;
            }

            body.sidebar-collapsed .app-main {
                margin-left: 0;
            }

            body.sidebar-collapsed .app-header {
                left: 0;
            }

            /* Custom menu for toggle button */
            .custom-menu {
                position: absolute;
                top: 20px;
                right: -60px;
                z-index: 1000;
                transition: all 0.3s;
            }

            /* Toggle button styling */
            #sidebarCollapse {
                width: 45px;
                height: 45px;
                background: #0d6efd;
                color: white;
                border: none;
                border-radius: 50%;
                cursor: pointer;
                box-shadow: 0 1px 4px rgba(0, 0, 0, 0.3);
                display: flex;
                align-items: center;
                justify-content: center;
                transition: all 0.3s;
            }

            #sidebarCollapse:hover {
                background: #0b5ed7;
                transform: rotate(90deg);
            }

            #sidebarCollapse i {
                font-size: 1.2rem;
            }

            /* Sidebar content styling */
            .sidebar-content {
                display: flex;
                flex-direction: column;
                height: 100%;
                padding: 20px 15px;
                overflow-y: auto;
                scrollbar-width: thin;
                scrollbar-color: rgba(255, 255, 255, 0.2) transparent;
            }

            .sidebar-content::-webkit-scrollbar {
                width: 6px;
            }

            .sidebar-content::-webkit-scrollbar-thumb {
                background-color: rgba(255, 255, 255, 0.2);
                border-radius: 3px;
            }

            /* Logo styling */
            .logo-container {
                padding: 10px 5px 25px 5px;
            }

            .logo {
                display: flex;
                align-items: center;
                text-decoration: none;
                color: white;
            }

            .logo:hover {
                color: white;
                opacity: 0.9;
            }

            .logo img {
                height: 40px;
                width: auto;
                transition: all 0.3s ease;
            }

            .logo span {
                font-size: 1.2rem;
                margin-left: 10px;
            }

            /* Navigation items */
