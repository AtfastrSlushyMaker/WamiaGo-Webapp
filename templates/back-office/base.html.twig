                display: flex;
                align-items: center;
                padding: 12px 15px;
                color: rgba(255, 255, 255, 0.85);
                text-decoration: none;
                border-radius: 10px;
                transition: all 0.2s ease;
                position: relative;
                background: rgba(255, 255, 255, 0.08);
            }

            .nav-link:hover {
                background: rgba(255, 255, 255, 0.15);
                color: #fff;
                transform: translateX(5px);
            }

