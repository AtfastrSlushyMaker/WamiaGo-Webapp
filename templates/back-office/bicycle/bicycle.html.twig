                    </div>
                    <h5 class="card-title">Low Battery</h5>
                    <div class="h2 mb-0">3</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Actions & Filters -->
    <div class="row mb-4">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Fleet Management</h5>
                    <div class="row g-3">
                        <div class="col-md-4">
                            <label class="form-label">Status</label>
                            <select class="form-select">
                                <option value="">All Statuses</option>
                                <option value="available">Available</option>
                                <option value="in_use">In Use</option>
                                <option value="maintenance">Maintenance</option>
                                <option value="inactive">Inactive</option>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Station</label>
                            <select class="form-select">
                                <option value="">All Stations</option>
                                <option value="1">Downtown Station</option>
                                <option value="2">University Campus</option>
                                <option value="3">Beach Front</option>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Battery Level</label>
                            <select class="form-select">
                                <option value="">Any Level</option>
                                <option value="90">90%+ (Premium)</option>
                                <option value="50">50%+</option>
                                <option value="25">25%+</option>
                                <option value="low">Low (< 25%)</option>
                            </select>
                        </div>
                        <div class="col-12">
                            <button class="btn btn-primary me-2">
                                <i class="fas fa-filter me-2"></i>Apply Filters
                            </button>
                            <button class="btn btn-outline-secondary">
                                <i class="fas fa-redo me-2"></i>Reset
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card h-100">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Quick Actions</h5>
                    <div class="d-grid gap-2 mt-3">
                        <button class="btn btn-success">
                            <i class="fas fa-plus me-2"></i>Add New Bicycle
                        </button>
                        <button class="btn btn-outline-warning">
                            <i class="fas fa-tools me-2"></i>Schedule Maintenance
                        </button>
                        <button class="btn btn-outline-info">
                            <i class="fas fa-battery-three-quarters me-2"></i>Battery Report
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

