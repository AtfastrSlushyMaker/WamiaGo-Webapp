<script>
document.addEventListener('DOMContentLoaded', function() {
    // Initialize modals
    const deleteBicycleModal = document.getElementById('deleteBicycleModal');
    if (deleteBicycleModal) {
        const bsDeleteModal = new bootstrap.Modal(deleteBicycleModal, {
            backdrop: 'static'
        });
        
        // Set up delete bicycle button handlers
        document.querySelectorAll('.delete-bicycle').forEach(button => {
            button.addEventListener('click', function(e) {
                e.preventDefault();
                const bicycleId = this.dataset.bicycleId;
                document.getElementById('deleteBicycleId').textContent = bicycleId;
                document.getElementById('deleteBicycleIdInput').value = bicycleId;
                
                // Show loading state
                document.getElementById('deleteBicycleType').innerHTML = '<i class="ti ti-loader ti-spin"></i>';
                document.getElementById('deleteBicycleBattery').innerHTML = '<i class="ti ti-loader ti-spin"></i>';
                document.getElementById('deleteBicycleRange').innerHTML = '<i class="ti ti-loader ti-spin"></i>';
                document.getElementById('deleteBicycleStatus').innerHTML = '<i class="ti ti-loader ti-spin"></i>';
                document.getElementById('deleteBicycleStation').innerHTML = '<i class="ti ti-loader ti-spin"></i>';
                
                // Fetch bicycle details for preview
                let url = '{{ path("admin_bicycle_data", {"id": "__bicycleId__"})|escape("js") }}';
                // Replace the placeholder with the actual bicycleId
                url = url.replace('__bicycleId__', bicycleId);
                
                fetch(url)
                    .then(response => {
                        if (!response.ok) {
                            throw new Error('Network response was not ok: ' + response.status);
                        }
                        return response.json();
                    })
                    .then(data => {
                        // Set bicycle type with appropriate icon based on battery level
                        const isHighBattery = data.batteryLevel > 90;
                        document.getElementById('deleteBicycleType').innerHTML = 
                            `<i class="ti ti-${isHighBattery ? 'star' : 'bike'} text-${isHighBattery ? 'success' : 'primary'} me-1"></i>
                            ${isHighBattery ? 'Premium E-Bike' : 'Standard E-Bike'}`;
                        
                        // Set battery level with color coding
                        let batteryColor = 'success';
                        if (data.batteryLevel < 25) batteryColor = 'danger';
                        else if (data.batteryLevel < 50) batteryColor = 'warning';
                        else if (data.batteryLevel < 90) batteryColor = 'primary';
                        
                        document.getElementById('deleteBicycleBattery').innerHTML = 
                            `<span class="text-${batteryColor}">${data.batteryLevel}%</span>`;
                        
                        // Set range
                        document.getElementById('deleteBicycleRange').textContent = `${data.rangeKm} km`;
                        
                        // Set status with appropriate styling
                        const statusMap = {
                            'available': 'success',
                            'in_use': 'primary',
                            'maintenance': 'warning',
                            'charging': 'info',
                            'reserved': 'secondary'
                        };
                        
                        const statusColor = statusMap[data.status.value] || 'secondary';
                        const statusLabel = data.status.value.replace('_', ' ').toUpperCase();
                        document.getElementById('deleteBicycleStatus').innerHTML = 
                            `<span class="badge bg-${statusColor} bg-opacity-10 text-${statusColor} px-2 py-1">
                                ${statusLabel}
                            </span>`;
                        
                        // Set station
                        if (data.bicycleStation) {
                            document.getElementById('deleteBicycleStation').innerHTML = 
                                `<i class="ti ti-map-pin text-primary me-1"></i> ${data.bicycleStation.name}`;
                        } else {
                            document.getElementById('deleteBicycleStation').innerHTML = 
                                `<span class="text-muted">No Station Assigned</span>`;
                        }
                        
                        // Change bicycle icon color based on battery
                        const iconContainer = document.querySelector('.bicycle-preview .bicycle-icon-container');
                        iconContainer.className = 'bicycle-icon-container mx-auto mb-3';
                        iconContainer.classList.add(`bg-${batteryColor}-subtle`);
                        
                        const bicycleIcon = iconContainer.querySelector('i');
                        bicycleIcon.className = `ti ti-bike text-${batteryColor}`;
                        bicycleIcon.style.fontSize = '32px';
                    })
                    .catch(error => {
                        console.error('Error fetching bicycle data:', error);
                        document.getElementById('deleteBicycleType').textContent = 'Error loading data';
                        document.getElementById('deleteBicycleBattery').textContent = 'Error loading data';
                        document.getElementById('deleteBicycleRange').textContent = 'Error loading data';
                        document.getElementById('deleteBicycleStatus').textContent = 'Error loading data';
                        document.getElementById('deleteBicycleStation').textContent = 'Error loading data';
                    });
                
                bsDeleteModal.show();
            });
        });
        
        // Enable delete button only when checkbox is checked
        const confirmCheckbox = document.getElementById('confirmBicycleDelete');
        const deleteButton = document.getElementById('deleteBicycleBtn');
        confirmCheckbox.addEventListener('change', function() {
            deleteButton.disabled = !this.checked;
        });
    }
    
    // Set up status change handlers
    document.querySelectorAll('.status-change').forEach(link => {
        link.addEventListener('click', function(e) {
            e.preventDefault();
            const bicycleId = this.dataset.bicycleId;
            const status = this.dataset.status;
            
            document.getElementById('statusChangeBicycleId').value = bicycleId;
            document.getElementById('statusChangeValue').value = status;
            document.getElementById('bicycleStatusForm').submit();
        });
    });
    
    // Edit bicycle modal data population
    document.querySelectorAll('[data-bs-target="#editBicycleModal"]').forEach(button => {
        button.addEventListener('click', function() {
            const bicycleId = this.dataset.bicycleId;
            populateEditForm(bicycleId);
        });
    });
    
    function populateEditForm(bicycleId) {
        // Use the Twig-generated URL with a placeholder that we'll replace
        let url = '{{ path("admin_bicycle_data", {"id": "__bicycleId__"})|escape("js") }}';
        // Replace the placeholder with the actual bicycle ID
        url = url.replace('__bicycleId__', bicycleId);
        
        fetch(url)
            .then(response => response.json())
            .then(data => {
                console.log('Bicycle data received:', data);
                document.querySelector('#editBicycleForm .bicycle-id-field').value = data.idBike;
                
                const formAction = '{{ path('admin_bicycle_edit', {'id': 'bicycleId'}) }}'.replace('bicycleId', data.idBike);
                document.getElementById('editBicycleForm').setAttribute('action', formAction);
                
                // Battery level
                const batteryField = document.querySelector('#editBicycleForm [name*="[battery_level]"]');
                if (batteryField && data.batteryLevel !== undefined) batteryField.value = data.batteryLevel;
                
                // Range
                const rangeField = document.querySelector('#editBicycleForm [name*="[range_km]"]');
                if (rangeField && data.rangeKm !== undefined) rangeField.value = data.rangeKm;
                
                // Status
                const statusField = document.querySelector('#editBicycleForm [name*="[status]"]');
                if (statusField && data.status) {
                    Array.from(statusField.options).forEach(option => {
                        option.selected = option.value === data.status.value;
                    });
                }
                
                // Station
                const stationField = document.querySelector('#editBicycleForm [name*="[bicycleStation]"]');
                if (stationField) {
                    // Check if data.stationId exists and is not null
                    if (data.stationId !== null && data.stationId !== undefined) {
                        // Set the value of the select element directly using data.stationId
                        stationField.value = data.stationId;
                    } else {
                        // If no station ID is provided, select the placeholder/empty option.
                        stationField.value = ""; 
                    }
                }
                
                // Last updated
                const lastUpdatedField = document.querySelector('#editBicycleForm [name*="[last_updated]"]');
                if (lastUpdatedField && data.lastUpdated) {
                    const date = new Date(data.lastUpdated);
                    const formattedDate = `${date.getFullYear()}-${String(date.getMonth() + 1).padStart(2, '0')}-${String(date.getDate()).padStart(2, '0')} ${String(date.getHours()).padStart(2, '0')}:${String(date.getMinutes()).padStart(2, '0')}`;
                    lastUpdatedField.value = formattedDate;
                }
            })
            .catch(error => {
                console.error('Error fetching bicycle data:', error);
                alert('Could not load bicycle data. Please try again.');
            });
    }
    
    // Station assignment functionality
    function setupStationAssignment() {
        const stationSelect = document.querySelector('#stationAssignForm [name*="[station]"]');
        if (!stationSelect) return;
        
        stationSelect.addEventListener('change', function() {
            const stationId = this.value;
            if (!stationId) {
                document.getElementById('stationName').textContent = 'Please select a station';
                document.getElementById('stationCapacity').textContent = '--';
                document.getElementById('stationAvailable').textContent = '--';
                document.getElementById('stationCapacityVisual').textContent = '--';
                document.getElementById('stationCapacityVisual').style.backgroundColor = 'rgba(13, 110, 253, 0.1)';
                document.getElementById('stationCapacityVisual').style.color = '#0d6efd';
                return;
            }
            
            fetch(`/admin/station/${stationId}/capacity`)
                .then(response => response.json())
                .then(data => {
                    document.getElementById('stationName').textContent = data.name;
                    document.getElementById('stationCapacity').textContent = data.capacity;
                    document.getElementById('stationAvailable').textContent = data.available;
                    const capacityPercentage = (data.available / data.capacity) * 100;
                    document.getElementById('stationCapacityVisual').textContent = Math.round(capacityPercentage) + '%';
                    
                    // Update visual indicator based on capacity
                    if (capacityPercentage < 20) {
                        document.getElementById('stationCapacityVisual').style.backgroundColor = 'rgba(220, 53, 69, 0.1)';
                        document.getElementById('stationCapacityVisual').style.color = '#dc3545';
                    } else if (capacityPercentage < 50) {
                        document.getElementById('stationCapacityVisual').style.backgroundColor = 'rgba(255, 193, 7, 0.1)';
                        document.getElementById('stationCapacityVisual').style.color = '#ffc107';
                    } else {
                        document.getElementById('stationCapacityVisual').style.backgroundColor = 'rgba(25, 135, 84, 0.1)';
                        document.getElementById('stationCapacityVisual').style.color = '#198754';
                    }
                })
                .catch(error => {
                    console.error('Error fetching station data:', error);
                });
        });
    }
    
    // Initialize Select2 for multiple select boxes if available
    if (typeof $.fn !== 'undefined' && typeof $.fn.select2 !== 'undefined') {
        $('.form-select[multiple]').select2({
            theme: 'bootstrap-5',
            width: '100%'
        });
    }
    
    // Initialize datepicker if available
    if (typeof $.fn !== 'undefined' && typeof $.fn.datepicker !== 'undefined') {
        $('input[name*="[scheduledDate]"]').datepicker({
            format: 'yyyy-mm-dd',
            autoclose: true,
            todayHighlight: true
        });
    }
    
    // Initialize other functions
    setupStationAssignment();
    initSearchFunctionality();
    setupDropdownMenus();
    
    function initSearchFunctionality() {
        const searchInput = document.getElementById('bicycleSearch');
        if (!searchInput) return;
        
        searchInput.addEventListener('input', function() {
            const searchTerm = this.value.toLowerCase();
            const tableRows = document.querySelectorAll('#bicyclesTable tbody tr');
            const gridCards = document.querySelectorAll('.bicycle-card-wrapper');
            
            if (tableRows.length > 0) {
                tableRows.forEach(row => {
                    const text = row.textContent.toLowerCase();
                    row.style.display = text.includes(searchTerm) ? '' : 'none';
                });
            } else if (gridCards.length > 0) {
                gridCards.forEach(card => {
                    const text = card.textContent.toLowerCase();
                    card.style.display = text.includes(searchTerm) ? '' : 'none';
                });
            }
        });
    }
    
    function setupDropdownMenus() {
        const dropdownSubmenus = document.querySelectorAll('.dropdown-submenu > a');
        dropdownSubmenus.forEach(item => {
            item.addEventListener('click', function(e) {
                e.preventDefault();
                e.stopPropagation();
                const submenu = this.nextElementSibling;
                if (!submenu) return;
                
                const isOpen = submenu.classList.contains('show');
                // Close other open submenus
                document.querySelectorAll('.dropdown-submenu .dropdown-menu.show').forEach(menu => {
                    menu.classList.remove('show');
                });
                
                if (!isOpen) {
                    submenu.classList.add('show');
                    // Position the submenu
                    const rect = this.getBoundingClientRect();
                    const windowWidth = window.innerWidth;
                    const menuWidth = 200;
                    
                    if (rect.right + menuWidth > windowWidth) {
                        submenu.style.left = 'auto';
                        submenu.style.right = '100%';
                    } else {
                        submenu.style.left = '100%';
                        submenu.style.right = 'auto';
                    }
                    submenu.style.top = '0';
                }
            });
        });
        
        // Close submenus when clicking outside
        document.addEventListener('click', function(event) {
            if (!event.target.closest('.dropdown-menu')) {
                document.querySelectorAll('.dropdown-submenu .dropdown-menu.show').forEach(menu => {
                    menu.classList.remove('show');
                });
            }
        });
    }
});
</script>