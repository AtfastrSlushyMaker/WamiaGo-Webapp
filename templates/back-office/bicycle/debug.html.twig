{% extends 'back-office/base.html.twig' %}

{% block title %}Bicycle Rental Debug{% endblock %}

{% block content %}
<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title">Bicycle Rental Diagnostics</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <p>This page provides diagnostic information about the bicycle_rental table and entity mapping.</p>
                    </div>
                    
                    <h4 class="mt-4">Database Table Information</h4>
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <tr>
                                <th width="200">Table Exists</th>
                                <td>
                                    {% if output.table_exists is defined %}
                                        {% if output.table_exists %}
                                            <span class="badge bg-success">Yes</span>
                                        {% else %}
                                            <span class="badge bg-danger">No</span>
                                        {% endif %}
                                    {% else %}
                                        <span class="badge bg-warning">Unknown</span>
                                    {% endif %}
                                </td>
                            </tr>
                            <tr>
                                <th>Row Count (SQL)</th>
                                <td>{% if output.sql_count is defined %}{{ output.sql_count }}{% else %}N/A{% endif %}</td>
                            </tr>
                            <tr>
                                <th>SQL Error</th>
                                <td>{% if output.sql_error is defined %}{{ output.sql_error }}{% else %}None{% endif %}</td>
                            </tr>
                        </table>
                    </div>
                    
                    {% if output.table_structure is defined %}
                        <h4 class="mt-4">Table Structure</h4>
                        <div class="table-responsive">
                            <table class="table table-bordered table-sm">
                                <thead>
                                    <tr>
                                        <th>Field</th>
                                        <th>Type</th>
                                        <th>Null</th>
                                        <th>Key</th>
                                        <th>Default</th>
                                        <th>Extra</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for field in output.table_structure %}
                                        <tr>
                                            <td>{{ field.Field }}</td>
                                            <td>{{ field.Type }}</td>
                                            <td>{{ field.Null }}</td>
                                            <td>{{ field.Key }}</td>
                                            <td>{% if field.Default is defined %}{{ field.Default }}{% else %}NULL{% endif %}</td>
                                            <td>{{ field.Extra }}</td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% endif %}
                    
                    {% if output.sample_rows is defined and output.sample_rows|length > 0 %}
                        <h4 class="mt-4">Sample Database Rows</h4>
                        <div class="table-responsive">
                            <table class="table table-bordered table-sm">
                                <thead>
                                    <tr>
                                        {% for key, value in output.sample_rows[0] %}
                                            <th>{{ key }}</th>
                                        {% endfor %}
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for row in output.sample_rows %}
                                        <tr>
                                            {% for value in row %}
                                                <td>{{ value }}</td>
                                            {% endfor %}
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% endif %}
                    
                    <h4 class="mt-4">ORM Test Results</h4>
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <tr>
                                <th width="200">Repository Count</th>
                                <td>{% if output.repository_count is defined %}{{ output.repository_count }}{% else %}N/A{% endif %}</td>
                            </tr>
                            <tr>
                                <th>Repository Error</th>
                                <td>{% if output.repository_error is defined %}{{ output.repository_error }}{% else %}None{% endif %}</td>
                            </tr>
                            <tr>
                                <th>QueryBuilder Count</th>
                                <td>{% if output.query_builder_count is defined %}{{ output.query_builder_count }}{% else %}N/A{% endif %}</td>
                            </tr>
                            <tr>
                                <th>QueryBuilder Error</th>
                                <td>{% if output.query_builder_error is defined %}{{ output.query_builder_error }}{% else %}None{% endif %}</td>
                            </tr>
                        </table>
                    </div>
                    
                    <h4 class="mt-4">Entity Mapping</h4>
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <tr>
                                <th width="200">Can Create Entities</th>
                                <td>
                                    {% if output.can_create_entities is defined %}
                                        <span class="badge bg-success">Yes</span>
                                    {% else %}
                                        <span class="badge bg-danger">No</span>
                                    {% endif %}
                                </td>
                            </tr>
                            <tr>
                                <th>Entity Table</th>
                                <td>{% if output.entity_table is defined %}{{ output.entity_table }}{% else %}N/A{% endif %}</td>
                            </tr>
                            <tr>
                                <th>Entity Fields</th>
                                <td>{% if output.entity_fields is defined %}{{ output.entity_fields|join(', ') }}{% else %}N/A{% endif %}</td>
                            </tr>
                            <tr>
                                <th>Entity Associations</th>
                                <td>{% if output.entity_associations is defined %}{{ output.entity_associations|join(', ') }}{% else %}N/A{% endif %}</td>
                            </tr>
                            <tr>
                                <th>Entity Error</th>
                                <td>{% if output.entity_error is defined %}{{ output.entity_error }}{% else %}None{% endif %}</td>
                            </tr>
                        </table>
                    </div>
                    
                    {% if output.created_rental is defined %}
                        <h4 class="mt-4">Rental Creation Test</h4>
                        <div class="alert {% if output.created_rental %}alert-success{% else %}alert-danger{% endif %}">
                            {% if output.created_rental %}
                                <p>Successfully created a test rental with ID: {{ output.new_rental_id }}</p>
                            {% else %}
                                <p>Failed to create a test rental: {{ output.create_error }}</p>
                            {% endif %}
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}