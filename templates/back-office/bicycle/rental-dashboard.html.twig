<div class="rental-dashboard">
    <div class="dashboard-container shadow-sm border rounded bg-white p-4">
        <div class="tabs">
            <div class="tab active" data-tab="stations">Stations</div>
            <div class="tab" data-tab="bicycles">Bicycles</div>
            <div class="tab" data-tab="rentals">Rentals</div>
        </div>

        <div class="tab-content active" id="stations">
            <!-- Content for Stations -->
            <h4 class="mt-4 mb-3">Manage Stations</h4>
            <p>View and manage bicycle stations across the city.</p>
        </div>

        <div class="tab-content" id="bicycles">
            <!-- Content for Bicycles -->
            <h4 class="mt-4 mb-3">Manage Bicycles</h4>
            <p>Track and manage all bicycles in the system.</p>
        </div>

        <div class="tab-content" id="rentals">
            <!-- Rental form with Symfony form helpers -->
            <div class="rental-form-container mt-4">
                <h4 class="mb-3">Manage Rentals</h4>
                
                {% if form is defined %}
                {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'needs-validation'}}) }}
                    <div class="row g-3">
                        <div class="col-md-6">
                            {{ form_row(form.startStation, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.endStation, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    
                    <div class="row g-3 mt-2">
                        <div class="col-md-6">
                            {{ form_row(form.bicycle, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.user, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    
                    <div class="row g-3 mt-2">
                        <div class="col-md-6">
                            {{ form_row(form.startTime, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.endTime, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    
                    <div class="row g-3 mt-2">
                        <div class="col-md-6">
                            {{ form_row(form.cost, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    
                    <div class="mt-4">
                        <button type="submit" class="btn btn-primary">Save Rental</button>
                        <button type="reset" class="btn btn-secondary">Reset</button>
                    </div>
                {{ form_end(form) }}
                {% else %}
                <div class="alert alert-info">
                    <p>Rental form is not available. Please make sure you're accessing this page through the proper rental page.</p>
                </div>
                {% endif %}
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            document.querySelectorAll('.tab').forEach(tab => {
                tab.addEventListener('click', () => {
                    document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
                    document.querySelectorAll('.tab-content').forEach(content => content.classList.remove('active'));

                    tab.classList.add('active');
                    document.getElementById(tab.getAttribute('data-tab')).classList.add('active');
                });
            });
        });
    </script>
</div>