{% extends 'back-office/bicycle-rentals.html.twig' %}

{% block tab_content %}
<div class="rentals-dashboard">
    <!-- Filters & Actions Row -->
    <div class="row mb-4">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5 class="card-title mb-0">Rental Filters</h5>
                        <a href="{{ path('admin_bicycle_rental_new') }}" class="btn btn-sm btn-success">
                            <i class="fas fa-plus me-2"></i>New Rental
                        </a>
                    </div>
                    <form id="filter-form" method="get" action="{{ path('admin_bicycle_rentals_index') }}">
                        <div class="row g-3">
                            <div class="col-md-4">
                                <label class="form-label">Status</label>
                                <select name="status" class="form-select">
                                    <option value="">All Statuses</option>
                                    <option value="reserved" {% if app.request.query.get('status') == 'reserved' %}selected{% endif %}>Reserved</option>
                                    <option value="active" {% if app.request.query.get('status') == 'active' %}selected{% endif %}>Active</option>
                                    <option value="completed" {% if app.request.query.get('status') == 'completed' %}selected{% endif %}>Completed</option>
                                    <option value="cancelled" {% if app.request.query.get('status') == 'cancelled' %}selected{% endif %}>Cancelled</option>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Date Range</label>
                                <div class="input-group">
                                    <input type="date" name="startDate" class="form-control" placeholder="From" value="{{ app.request.query.get('startDate') }}">
                                    <span class="input-group-text"><i class="fas fa-calendar"></i></span>
                                    <input type="date" name="endDate" class="form-control" placeholder="To" value="{{ app.request.query.get('endDate') }}">
                                </div>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Station</label>
                                <select name="stationId" class="form-select">
                                    <option value="">All Stations</option>
                                    {% for station in stations %}
                                        <option value="{{ station.idStation }}" {% if app.request.query.get('stationId') == station.idStation|string %}selected{% endif %}>
                                            {{ station.name }}
                                        </option>
                                    {% endfor %}
                                </select>
                            </div>
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary me-2">
                                    <i class="fas fa-filter me-2"></i>Apply Filters
                                </button>
                                <a href="{{ path('admin_bicycle_rentals_index') }}" class="btn btn-outline-secondary">
                                    <i class="fas fa-redo me-2"></i>Reset
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Quick Analytics</h5>
                    <div class="d-flex justify-content-between align-items-center mt-3">
                        <div>
                            <p class="text-muted mb-1">Today's Rentals</p>
                            <h4 class="mb-0">{{ todayRentalsCount }}</h4>
                        </div>
                        <div>
                            <p class="text-muted mb-1">Avg. Duration</p>
                            <h4 class="mb-0">{{ avgDuration|number_format(1) }}h</h4>
                        </div>
                        <div>
                            <p class="text-muted mb-1">Completion Rate</p>
                            <h4 class="mb-0">{{ completionRate|number_format(0) }}%</h4>
                        </div>
                    </div>
                    <div class="mt-auto pt-3">
                        <a href="{{ path('admin_bicycle_rental_reports') }}" class="btn btn-sm btn-outline-primary w-100">
                            <i class="fas fa-chart-line me-2"></i>Detailed Reports
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Alerts Section -->
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
    {% endfor %}
    
    <!-- Rentals Table -->
    <div class="card mb-4">
        <div class="card-header bg-white d-flex justify-content-between align-items-center py-3">
            <h5 class="mb-0">Bicycle Rentals</h5>
            <div class="dropdown">
                <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" id="rentalActions" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="fas fa-cog me-2"></i>Actions
                </button>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="rentalActions">
                    <li>
                        <a class="dropdown-item" href="#" id="export-csv">
                            <i class="fas fa-file-csv me-2"></i>Export as CSV
                        </a>
                    </li>
                    <li>
                        <a class="dropdown-item" href="#" id="export-excel">
                            <i class="fas fa-file-excel me-2"></i>Export as Excel
                        </a>
                    </li>
                    <li>
                        <a class="dropdown-item" href="#" onclick="window.print();">
                            <i class="fas fa-print me-2"></i>Print List
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="card-body">
            {% if rentals is empty %}
                <div class="text-center py-5">
                    <i class="fas fa-bicycle fa-3x text-muted mb-3"></i>
                    <h5>No Rentals Found</h5>
                    <p class="text-muted">There are no rentals matching your filter criteria.</p>
                    <a href="{{ path('admin_bicycle_rental_new') }}" class="btn btn-success mt-2">
                        <i class="fas fa-plus me-2"></i>Create New Rental
                    </a>
                </div>
            {% else %}
                <div class="table-responsive">
                    <table class="table table-hover align-middle datatable" id="rentalsTable">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>User</th>
                                <th>Bicycle</th>
                                <th>Stations</th>
                                <th>Start Time</th>
                                <th>End Time</th>
                                <th>Duration</th>
                                <th>Cost</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for rental in rentals %}
                                {% set status = 'Reserved' %}
                                {% set statusColor = 'warning' %}
                                {% if rental.startTime and rental.endTime %}
                                    {% set status = 'Completed' %}
                                    {% set statusColor = 'success' %}
                                {% elseif rental.startTime %}
                                    {% set status = 'Active' %}
                                    {% set statusColor = 'primary' %}
                                {% endif %}
                                
                                <tr>
                                    <td><span class="fw-bold">B{{ '%05d'|format(rental.idUserRental) }}</span></td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="avatar avatar-sm bg-light rounded-circle me-2 d-flex align-items-center justify-content-center">
                                                <span class="text-secondary">{{ rental.user ? rental.user.firstName|first|upper : 'U' }}</span>
                                            </div>
                                            <div>{{ rental.user ? rental.user.firstName ~ ' ' ~ rental.user.lastName : 'Unknown User' }}</div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            {% set isPremium = rental.bicycle.batteryLevel > 90 %}
                                            <i class="fas fa-bicycle me-2 text-{{ isPremium ? 'success' : 'primary' }}"></i>
                                            <span>Bike #{{ rental.bicycle.idBike }}</span>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="d-flex flex-column">
                                            <div class="d-flex align-items-center">
                                                <i class="fas fa-map-marker-alt text-danger me-1"></i>
                                                {{ rental.startStation ? rental.startStation.name : 'N/A' }}
                                            </div>
                                            {% if rental.endStation %}
                                                <div class="d-flex align-items-center mt-1">
                                                    <i class="fas fa-flag-checkered text-success me-1"></i>
                                                    {{ rental.endStation.name }}
                                                </div>
                                            {% endif %}
                                        </div>
                                    </td>
                                    <td>
                                        {% if rental.startTime %}
                                            <div class="d-flex flex-column">
                                                <span>{{ rental.startTime|date('Y-m-d') }}</span>
                                                <small class="text-muted">{{ rental.startTime|date('H:i') }}</small>
                                            </div>
                                        {% else %}
                                            <span class="text-muted">Not started</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if rental.endTime %}
                                            <div class="d-flex flex-column">
                                                <span>{{ rental.endTime|date('Y-m-d') }}</span>
                                                <small class="text-muted">{{ rental.endTime|date('H:i') }}</small>
                                            </div>
                                        {% else %}
                                            <span class="text-muted">-</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if rental.startTime and rental.endTime %}
                                            {% set duration_seconds = rental.endTime.timestamp - rental.startTime.timestamp %}
                                            {% set hours = (duration_seconds / 3600)|round(0, 'floor') %}
                                            {% set minutes = ((duration_seconds % 3600) / 60)|round(0, 'floor') %}
                                            <span>{{ hours }}h {{ minutes }}m</span>
                                        {% elseif rental.startTime %}
                                            <span class="active-timer" data-start="{{ rental.startTime|date('c') }}">
                                                <i class="fas fa-stopwatch text-primary"></i> Active
                                            </span>
                                        {% else %}
                                            <span class="text-muted">-</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <span class="fw-medium">{{ rental.cost|number_format(3) }} TND</span>
                                        {% if not rental.endTime %}
                                            <small class="d-block text-muted">(est.)</small>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <span class="badge bg-{{ statusColor }} {{ statusColor == 'warning' ? 'text-dark' : '' }}">
                                            {{ status }}
                                        </span>
                                    </td>
                                    <td>
                                        <div class="dropdown">
                                            <button class="btn btn-sm btn-icon btn-outline-secondary" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                <i class="fas fa-ellipsis-v"></i>
                                            </button>
                                            <ul class="dropdown-menu dropdown-menu-end">
                                                <li>
                                                    <a class="dropdown-item" href="{{ path('admin_bicycle_rental_show', {'id': rental.idUserRental}) }}">
                                                        <i class="fas fa-eye text-primary me-2"></i>View Details
                                                    </a>
                                                </li>
                                                <li>
                                                    <a class="dropdown-item" href="{{ path('admin_bicycle_rental_edit', {'id': rental.idUserRental}) }}">
                                                        <i class="fas fa-edit text-secondary me-2"></i>Edit
                                                    </a>
                                                </li>
                                                
                                                {% if status == 'Reserved' %}
                                                    <li>
                                                        <a class="dropdown-item activate-rental-btn" href="#" data-rental-id="{{ rental.idUserRental }}">
                                                            <i class="fas fa-play text-success me-2"></i>Activate
                                                        </a>
                                                    </li>
                                                {% endif %}
                                                
                                                {% if status == 'Active' %}
                                                    <li>
                                                        <a class="dropdown-item" href="{{ path('admin_bicycle_rental_show', {'id': rental.idUserRental}) }}#complete-rental">
                                                            <i class="fas fa-check-circle text-success me-2"></i>Complete
                                                        </a>
                                                    </li>
                                                {% endif %}
                                                
                                                {% if status != 'Completed' %}
                                                    <li><hr class="dropdown-divider"></li>
                                                    <li>
                                                        <a class="dropdown-item cancel-rental-btn text-danger" href="#" data-rental-id="{{ rental.idUserRental }}">
                                                            <i class="fas fa-times-circle me-2"></i>Cancel
                                                        </a>
                                                    </li>
                                                {% endif %}
                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                
                <!-- Pagination -->
                <div class="d-flex justify-content-center mt-4">
                    {{ knp_pagination_render(rentals) }}
                </div>
            {% endif %}
        </div>
    </div>
</div>

<!-- Hidden Forms for POST actions -->
<form id="activateRentalForm" method="POST" style="display: none;">
    <!-- Form will be dynamically populated -->
</form>

<form id="cancelRentalForm" method="POST" style="display: none;">
    <!-- Form will be dynamically populated -->
</form>

<!-- Modal for Confirmation -->
<div class="modal fade" id="confirmActionModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmActionTitle">Confirm Action</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="confirmActionBody">
                Are you sure you want to proceed with this action?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="confirmActionBtn">Confirm</button>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .avatar-sm {
        width: 32px;
        height: 32px;
    }
    
    .active-timer {
        animation: pulse 2s infinite;
    }
    
    @keyframes pulse {
        0% { opacity: 1; }
        50% { opacity: 0.7; }
        100% { opacity: 1; }
    }
</style>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Initialize DataTable if it exists
    if ($.fn.DataTable && document.getElementById('rentalsTable')) {
        $('#rentalsTable').DataTable({
            "paging": false,  // We're using KnpPaginator
            "info": false,    // Hide "Showing X of Y entries"
            "searching": true,
            "order": [[0, 'desc']],  // Sort by ID descending by default
            "columnDefs": [
                { "orderable": false, "targets": [9] }  // Disable sorting on actions column
            ]
        });
    }
    
    // Update active timers
    function updateActiveTimers() {
        document.querySelectorAll('.active-timer').forEach(timer => {
            const startTime = new Date(timer.dataset.start);
            const now = new Date();
            const diffSeconds = Math.floor((now - startTime) / 1000);
            const hours = Math.floor(diffSeconds / 3600);
            const minutes = Math.floor((diffSeconds % 3600) / 60);
            
            timer.innerHTML = `<i class="fas fa-stopwatch text-primary"></i> ${hours}h ${minutes}m`;
        });
    }
    
    if (document.querySelectorAll('.active-timer').length > 0) {
        updateActiveTimers();
        setInterval(updateActiveTimers, 60000);  // Update every minute
    }
    
    // Setup Confirmation Modal
    let confirmModal = new bootstrap.Modal(document.getElementById('confirmActionModal'));
    let activeForm = null;
    
    // Setup Activate Rental buttons
    document.querySelectorAll('.activate-rental-btn').forEach(btn => {
        btn.addEventListener('click', function(e) {
            e.preventDefault();
            const rentalId = this.getAttribute('data-rental-id');
            const form = document.getElementById('activateRentalForm');
            form.setAttribute('action', `{{ path('admin_bicycle_rental_activate', {'id': '0'}) }}`.replace('/0', `/${rentalId}`));
            
            // Setup modal for activation
            document.getElementById('confirmActionTitle').textContent = 'Activate Rental';
            document.getElementById('confirmActionBody').textContent = 
                'Are you sure you want to activate this rental? This will mark the bicycle as in use and start the rental timer.';
            document.getElementById('confirmActionBtn').className = 'btn btn-success';
            document.getElementById('confirmActionBtn').textContent = 'Activate';
            
            activeForm = form;
            confirmModal.show();
        });
    });
    
    // Setup Cancel Rental buttons
    document.querySelectorAll('.cancel-rental-btn').forEach(btn => {
        btn.addEventListener('click', function(e) {
            e.preventDefault();
            const rentalId = this.getAttribute('data-rental-id');
            const form = document.getElementById('cancelRentalForm');
            form.setAttribute('action', `{{ path('admin_bicycle_rental_cancel', {'id': '0'}) }}`.replace('/0', `/${rentalId}`));
            
            // Setup modal for cancellation
            document.getElementById('confirmActionTitle').textContent = 'Cancel Rental';
            document.getElementById('confirmActionBody').textContent = 
                'Are you sure you want to cancel this rental? This action cannot be undone.';
            document.getElementById('confirmActionBtn').className = 'btn btn-danger';
            document.getElementById('confirmActionBtn').textContent = 'Cancel Rental';
            
            activeForm = form;
            confirmModal.show();
        });
    });
    
    // Handle confirmation button click
    document.getElementById('confirmActionBtn').addEventListener('click', function() {
        if (activeForm) {
            activeForm.submit();
        }
        confirmModal.hide();
    });
    
    // Export functionality
    document.getElementById('export-csv').addEventListener('click', function(e) {
        e.preventDefault();
        window.location.href = '{{ path('admin_bicycle_rentals_export', {'format': 'csv'}) }}' + window.location.search;
    });
    
    document.getElementById('export-excel').addEventListener('click', function(e) {
        e.preventDefault();
        window.location.href = '{{ path('admin_bicycle_rentals_export', {'format': 'excel'}) }}' + window.location.search;
    });
});
</script>
{% endblock %}