{# Improved Bicycle Rentals Tab #}
<div class="container-fluid px-0">
    <!-- Statistics Cards -->
    <div class="row">
        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body d-flex align-items-center">
                    <div class="rounded-circle p-3 bg-primary bg-opacity-10 me-3">
                        <i class="fas fa-bicycle fa-2x text-primary"></i>
                    </div>
                    <div>
                        <h6 class="text-muted mb-1">Total Rentals</h6>
                        <h3 class="fw-bold mb-0">{{ stats.totalRentals is defined ? stats.totalRentals : (rentals is defined ? rentals|length : 0) }}</h3>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body d-flex align-items-center">
                    <div class="rounded-circle p-3 bg-success bg-opacity-10 me-3">
                        <i class="fas fa-check-circle fa-2x text-success"></i>
                    </div>
                    <div>
                        <h6 class="text-muted mb-1">Completed</h6>
                        <h3 class="fw-bold mb-0">{{ stats.completedCount is defined ? stats.completedCount : 0 }}</h3>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body d-flex align-items-center">
                    <div class="rounded-circle p-3 bg-primary bg-opacity-10 me-3">
                        <i class="fas fa-biking fa-2x text-primary"></i>
                    </div>
                    <div>
                        <h6 class="text-muted mb-1">Active</h6>
                        <h3 class="fw-bold mb-0">{{ stats.activeCount is defined ? stats.activeCount : 0 }}</h3>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body d-flex align-items-center">
                    <div class="rounded-circle p-3 bg-warning bg-opacity-10 me-3">
                        <i class="fas fa-bookmark fa-2x text-warning"></i>
                    </div>
                    <div>
                        <h6 class="text-muted mb-1">Reserved</h6>
                        <h3 class="fw-bold mb-0">{{ stats.reservedCount is defined ? stats.reservedCount : 0 }}</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Filters -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-header bg-white py-3">
            <h5 class="mb-0 fw-bold">Filters</h5>
        </div>
        <div class="card-body">
            <form action="{{ path('admin_bicycle_rentals_index') }}" method="GET" id="rentalFilterForm">
                <div class="row g-3">
                    <div class="col-md-3">
                        <label class="form-label fw-medium">Status</label>
                        <select name="status" class="form-select">
                            <option value="">All Statuses</option>
                            <option value="active" {{ app.request.query.get('status') == 'active' ? 'selected' : '' }}>Active</option>
                            <option value="completed" {{ app.request.query.get('status') == 'completed' ? 'selected' : '' }}>Completed</option>
                            <option value="reserved" {{ app.request.query.get('status') == 'reserved' ? 'selected' : '' }}>Reserved</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label fw-medium">Station</label>
                        <select name="station" class="form-select">
                            <option value="">All Stations</option>
                            {% for station in stations %}
                                <option value="{{ station.idStation }}" {% if app.request.query.get('station') == station.idStation|number_format(0) %}selected{% endif %}>
                                    {{ station.name }}
                                </option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label fw-medium">From Date</label>
                        <input type="date" name="dateFrom" class="form-control" value="{{ app.request.query.get('dateFrom') }}">
                    </div>
                    <div class="col-md-3">
                        <label class="form-label fw-medium">To Date</label>
                        <input type="date" name="dateTo" class="form-control" value="{{ app.request.query.get('dateTo') }}">
                    </div>
                </div>
                <div class="mt-3 d-flex justify-content-between">
                    <div>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-filter me-2"></i>Apply Filters
                        </button>
                        <a href="{{ path('admin_bicycle_rentals_index') }}" class="btn btn-outline-secondary ms-2">
                            <i class="fas fa-redo me-2"></i>Reset
                        </a>
                    </div>
                    <a href="{{ path('admin_bicycle_rental_new') }}" class="btn btn-success">
                        <i class="fas fa-plus me-2"></i>New Rental
                    </a>
                </div>
            </form>
        </div>
    </div>
    
    <!-- Rentals Table Card -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-header bg-white d-flex justify-content-between align-items-center py-3">
            <h5 class="mb-0 fw-bold">Bicycle Rentals</h5>
            <div class="d-flex align-items-center">
                <span class="me-3 text-muted">Export:</span>
                <div class="btn-group">
                    <a href="{{ path('admin_bicycle_rental_export') }}{% if app.request.query.all|length > 0 %}?{{ app.request.query.all|url_encode }}{% endif %}" class="btn btn-sm btn-outline-primary">
                        <i class="fas fa-file-csv me-2"></i>CSV
                    </a>
                    <a href="#" class="btn btn-sm btn-outline-success" id="export-excel">
                        <i class="fas fa-file-excel me-2"></i>Excel
                    </a>
                    <a href="#" class="btn btn-sm btn-outline-danger">
                        <i class="fas fa-file-pdf me-2"></i>PDF
                    </a>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0 datatable">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>User</th>
                            <th>Bicycle</th>
                            <th>Start Station</th>
                            <th>Start Time</th>
                            <th>End Station</th>
                            <th>End Time</th>
                            <th>Duration</th>
                            <th>Distance (km)</th>
                            <th>Battery Used (%)</th>
                            <th>Cost</th>
                            <th>Status</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% if rentals is defined and rentals|length > 0 %}
                            {% for rental in rentals %}
                                {% set status = 'Reserved' %}
                                {% if rental.endTime is defined and rental.endTime %}
                                    {% set status = 'Completed' %}
                                {% elseif rental.startTime is defined and rental.startTime %}
                                    {% set status = 'Active' %}
                                {% endif %}
                                
                                <tr>
                                    <td>
                                        <span class="fw-medium">B{{ '%05d'|format(rental.idUserRental) }}</span>
                                    </td>
                                    <td>
                                        {% if rental.user is defined and rental.user %}
                                            {{ rental.user.name|default(rental.user.email)|default('Unknown') }}
                                        {% else %}
                                            Unknown
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if rental.bicycle is defined and rental.bicycle %}
                                            <span class="fw-medium">Bike #{{ rental.bicycle.idBike }}</span>
                                            <div class="small text-muted">
                                                {% if rental.bicycle.batteryLevel > 90 %}
                                                    Premium E-Bike
                                                {% else %}
                                                    Standard E-Bike
                                                {% endif %}
                                            </div>
                                        {% else %}
                                            Unknown
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if rental.startStation is defined and rental.startStation %}
                                            {{ rental.startStation.name|default('Unknown') }}
                                        {% else %}
                                            Unknown
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if rental.startTime is defined and rental.startTime %}
                                            {{ rental.startTime|date('Y-m-d H:i') }}
                                        {% else %}
                                            Not started
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if rental.endStation is defined and rental.endStation %}
                                            {{ rental.endStation.name|default('Unknown') }}
                                        {% else %}
                                            - 
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if rental.endTime is defined and rental.endTime %}
                                            {{ rental.endTime|date('Y-m-d H:i') }}
                                        {% else %}
                                            - 
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if status == 'Completed' and rental.startTime is defined and rental.endTime is defined %}
                                            {% set duration = date(rental.endTime).diff(date(rental.startTime)) %}
                                            {% set hours = duration.h + (duration.d * 24) %}
                                            {% set minutes = duration.i %}
                                            {{ hours }}h {{ minutes }}m
                                        {% elseif status == 'Active' and rental.startTime is defined %}
                                            {% set duration = date().diff(date(rental.startTime)) %}
                                            {% set hours = duration.h + (duration.d * 24) %}
                                            {% set minutes = duration.i %}
                                            {{ hours }}h {{ minutes }}m
                                        {% else %}
                                            - 
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if rental.distanceKm is defined and rental.distanceKm is not null %}
                                            {{ rental.distanceKm|number_format(2) }}
                                        {% else %}
                                            - 
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if rental.batteryUsed is defined and rental.batteryUsed is not null %}
                                            {{ rental.batteryUsed|number_format(1) }}%
                                        {% else %}
                                            - 
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if rental.cost is defined and rental.cost %}
                                            {{ rental.cost|number_format(3) }} TND
                                        {% else %}
                                            - 
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if status == 'Completed' %}
                                            <span class="badge bg-success">Completed</span>
                                        {% elseif status == 'Active' %}
                                            <span class="badge bg-primary">In Progress</span>
                                        {% else %}
                                            <span class="badge bg-warning text-dark">Reserved</span>
                                        {% endif %}
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group">
                                            <a href="{{ path('admin_bicycle_rental_show', {'id': rental.idUserRental}) }}" 
                                               class="btn btn-sm btn-outline-primary" 
                                               data-bs-toggle="tooltip" title="View Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="{{ path('admin_bicycle_rental_edit', {'id': rental.idUserRental}) }}" 
                                               class="btn btn-sm btn-outline-secondary" 
                                               data-bs-toggle="tooltip" title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            
                                            {% if status == 'Reserved' %}
                                                <button type="button" 
                                                        class="btn btn-sm btn-outline-success activate-rental-btn" 
                                                        data-rental-id="{{ rental.idUserRental }}"
                                                        data-bs-toggle="tooltip" title="Activate Rental">
                                                    <i class="fas fa-play"></i>
                                                </button>
                                                <button type="button" 
                                                        class="btn btn-sm btn-outline-danger cancel-rental-btn" 
                                                        data-rental-id="{{ rental.idUserRental }}"
                                                        data-bs-toggle="tooltip" title="Cancel">
                                                    <i class="fas fa-times"></i>
                                                </button>
                                            {% endif %}
                                            
                                            <button type="button" 
                                                    class="btn btn-sm btn-outline-danger delete-rental-btn" 
                                                    data-rental-id="{{ rental.idUserRental }}"
                                                    data-bs-toggle="tooltip" title="Delete">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        {% else %}
                            <tr>
                                <td colspan="13" class="text-center py-5">
                                    <div class="d-flex flex-column align-items-center">
                                        <div class="mb-3">
                                            <i class="fas fa-search fa-3x text-muted"></i>
                                        </div>
                                        <h5>No rentals found</h5>
                                        <p class="text-muted">Try adjusting your filters or create a new rental</p>
                                        <a href="{{ path('admin_bicycle_rental_new') }}" class="btn btn-primary mt-2">
                                            <i class="fas fa-plus me-2"></i>Create New Rental
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% endif %}
                    </tbody>
                </table>
            </div>
            
            <!-- Pagination -->
            {% if rentals is defined and rentals.isPaginationObject is defined %}
                <div class="d-flex justify-content-center p-3">
                    {{ knp_pagination_render(rentals) }}
                </div>
            {% endif %}
        </div>
    </div>
</div>

<!-- Hidden Forms for POST actions -->
<form id="activateRentalForm" method="POST" style="display: none;"></form>
<form id="cancelRentalForm" method="POST" style="display: none;"></form>
<form id="deleteRentalForm" method="POST" style="display: none;"></form>

<!-- Modal for Confirmation -->
<div class="modal fade" id="confirmActionModal" tabindex="-1" aria-labelledby="confirmActionModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmActionTitle">Confirm Action</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="confirmActionBody">
                Are you sure you want to perform this action?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="confirmActionBtn">Confirm</button>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Initialize Modal
    const confirmModal = new bootstrap.Modal(document.getElementById('confirmActionModal'));
    let activeForm = null;
    
    // Setup Activate Rental buttons
    document.querySelectorAll('.activate-rental-btn').forEach(btn => {
        btn.addEventListener('click', function() {
            const rentalId = this.getAttribute('data-rental-id');
            const form = document.getElementById('activateRentalForm');
            form.setAttribute('action', `{{ path('admin_bicycle_rental_activate', {'id': '0'}) }}`.replace('/0', `/${rentalId}`));
            
            // Setup modal for activation
            document.getElementById('confirmActionTitle').textContent = 'Activate Rental';
            document.getElementById('confirmActionBody').textContent = 
                'Are you sure you want to activate this rental? This will mark the bicycle as in use and start the rental timer.';
            document.getElementById('confirmActionBtn').className = 'btn btn-success';
            document.getElementById('confirmActionBtn').textContent = 'Activate';
            
            activeForm = form;
            confirmModal.show();
        });
    });
    
    // Setup Cancel Rental buttons
    document.querySelectorAll('.cancel-rental-btn').forEach(btn => {
        btn.addEventListener('click', function() {
            const rentalId = this.getAttribute('data-rental-id');
            const form = document.getElementById('cancelRentalForm');
            form.setAttribute('action', `{{ path('admin_bicycle_rental_cancel', {'id': '0'}) }}`.replace('/0', `/${rentalId}`));
            
            // Setup modal for cancellation
            document.getElementById('confirmActionTitle').textContent = 'Cancel Rental';
            document.getElementById('confirmActionBody').textContent = 
                'Are you sure you want to cancel this rental? This action cannot be undone.';
            document.getElementById('confirmActionBtn').className = 'btn btn-danger';
            document.getElementById('confirmActionBtn').textContent = 'Cancel Rental';
            
            activeForm = form;
            confirmModal.show();
        });
    });
    
    // Setup Delete Rental buttons
    document.querySelectorAll('.delete-rental-btn').forEach(btn => {
        btn.addEventListener('click', function() {
            const rentalId = this.getAttribute('data-rental-id');
            const form = document.getElementById('deleteRentalForm');
            form.setAttribute('action', `{{ path('admin_bicycle_rental_delete', {'id': '0'}) }}`.replace('/0', `/${rentalId}`));
            
            // Setup modal for deletion
            document.getElementById('confirmActionTitle').textContent = 'Delete Rental';
            document.getElementById('confirmActionBody').textContent = 
                'Are you sure you want to permanently delete this rental record? This action cannot be undone.';
            document.getElementById('confirmActionBtn').className = 'btn btn-danger';
            document.getElementById('confirmActionBtn').textContent = 'Delete Rental';
            
            activeForm = form;
            confirmModal.show();
        });
    });
    
    // Handle confirm action button
    document.getElementById('confirmActionBtn').addEventListener('click', function() {
        if (activeForm) {
            activeForm.submit();
        }
        confirmModal.hide();
    });
    
    // Export functionality
    document.getElementById('export-excel').addEventListener('click', function(e) {
        e.preventDefault();
        window.location.href = '{{ path('admin_bicycle_rentals_index') }}' + window.location.search + '&format=excel';
    });
});
</script>