{# This is a custom pagination template for back-office pages #}
{% if pageCount > 1 %}
<nav aria-label="Page navigation">
    <ul class="pagination pagination-modern mb-0">
        {# Previous page link #}
        {% if previous is defined %}
            <li class="page-item">
                <a class="page-link" href="{{ path(route, query|merge({(pageParameterName): previous})) }}" aria-label="Previous">
                    <i class="ti ti-chevron-left" aria-hidden="true"></i>
                </a>
            </li>
        {% else %}
            <li class="page-item disabled">
                <span class="page-link">
                    <i class="ti ti-chevron-left" aria-hidden="true"></i>
                </span>
            </li>
        {% endif %}

        {# First page #}
        {% if first is defined and current != first %}
            <li class="page-item">
                <a class="page-link" href="{{ path(route, query|merge({(pageParameterName): first})) }}">{{ first }}</a>
            </li>
            {% if pagesInRange[0] != first + 1 %}
                <li class="page-item disabled">
                    <span class="page-link">...</span>
                </li>
            {% endif %}
        {% endif %}

        {# Numbered page links #}
        {% for page in pagesInRange %}
            {% if page != current %}
                <li class="page-item">
                    <a class="page-link" href="{{ path(route, query|merge({(pageParameterName): page})) }}">{{ page }}</a>
                </li>
            {% else %}
                <li class="page-item active">
                    <span class="page-link">{{ page }}</span>
                </li>
            {% endif %}
        {% endfor %}

        {# Last page #}
        {% if last is defined and current != last %}
            {% if pagesInRange[pagesInRange|length - 1] != last - 1 %}
                <li class="page-item disabled">
                    <span class="page-link">...</span>
                </li>
            {% endif %}
            <li class="page-item">
                <a class="page-link" href="{{ path(route, query|merge({(pageParameterName): last})) }}">{{ last }}</a>
            </li>
        {% endif %}

        {# Next page link #}
        {% if next is defined %}
            <li class="page-item">
                <a class="page-link" href="{{ path(route, query|merge({(pageParameterName): next})) }}" aria-label="Next">
                    <i class="ti ti-chevron-right" aria-hidden="true"></i>
                </a>
            </li>
        {% else %}
            <li class="page-item disabled">
                <span class="page-link">
                    <i class="ti ti-chevron-right" aria-hidden="true"></i>
                </span>
            </li>
        {% endif %}
    </ul>
</nav>
{% endif %}