                                <td>123 Main St</td>
                                <td>456 Elm St</td>
                                <td><span class="status-badge status-pending">Pending</span></td>
                                <td>2025-04-15</td>
                                <td>
                                    <div class="action-buttons">
                                        <button class="btn btn-primary">Assign</button>
                                        <button class="btn btn-info">View</button>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td>2</td>
                                <td>Jane Smith</td>
                                <td>789 Oak St</td>
                                <td>321 Pine St</td>
                                <td><span class="status-badge status-accepted">Accepted</span></td>
                                <td>2025-04-14</td>
                                <td>
                                    <div class="action-buttons">
                                        <button class="btn btn-primary" disabled>Assign</button>
                                        <button class="btn btn-info">View</button>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td>3</td>
                                <td>Robert Williams</td>
                                <td>555 Cedar Ave</td>
                                <td>777 Maple Rd</td>
                                <td><span class="status-badge status-pending">Pending</span></td>
                                <td>2025-04-16</td>
                                <td>
                                    <div class="action-buttons">
                                        <button class="btn btn-primary">Assign</button>
                                        <button class="btn btn-info">View</button>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <ul class="pagination">
                    <li class="disabled"><a href="#">Previous</a></li>
                    <li class="active"><a href="#">1</a></li>
                    <li><a href="#">2</a></li>
                    <li><a href="#">3</a></li>
                    <li><a href="#">Next</a></li>
                </ul>
            </div>
        </div>
        
        <!-- Rides Panel -->
        <div class="dashboard-panel">
            <div class="panel-header rides-header">Active Rides</div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="admin-table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Driver</th>
                                <th>Route</th>
                                <th>Distance</th>
                                <th>Price</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>1</td>
