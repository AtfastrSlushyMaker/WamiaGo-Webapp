    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // View toggle functionality
            document.getElementById('list-view-btn').addEventListener('click', function() {
                document.getElementById('list-view').style.display = 'block';
                document.getElementById('card-view').style.display = 'none';
                this.classList.add('active');
                document.getElementById('card-view-btn').classList.remove('active');
                localStorage.setItem('userViewPreference', 'list');
            });
            
            document.getElementById('card-view-btn').addEventListener('click', function() {
                document.getElementById('list-view').style.display = 'none';
                document.getElementById('card-view').style.display = 'block';
                this.classList.add('active');
                document.getElementById('list-view-btn').classList.remove('active');
                localStorage.setItem('userViewPreference', 'card');
            });
            
            // Restore user's view preference
            const viewPreference = localStorage.getItem('userViewPreference');
            if (viewPreference === 'card') {
                document.getElementById('card-view-btn').click();
            }
            
            // Filter functionality
            const filterRole = document.getElementById('filter-role');
            const filterStatus = document.getElementById('filter-status');
            const filterVerified = document.getElementById('filter-verified');
            const pageSize = document.getElementById('page-size');
            const userSearch = document.getElementById('user-search');
            
            function applyFilters() {
                const params = new URLSearchParams(window.location.search);
                
                if (filterRole.value) params.set('role', filterRole.value);
                else params.delete('role');
                
                if (filterStatus.value) params.set('status', filterStatus.value);
                else params.delete('status');
                
                if (filterVerified.value) params.set('verified', filterVerified.value);
                else params.delete('verified');
                
                if (userSearch.value) params.set('search', userSearch.value);
                else params.delete('search');
                
                params.set('perPage', pageSize.value);
                
                window.location.href = '{{ path('admin_users') }}?' + params.toString();
            }
            
            filterRole.addEventListener('change', applyFilters);
            filterStatus.addEventListener('change', applyFilters);
            filterVerified.addEventListener('change', applyFilters);
            pageSize.addEventListener('change', applyFilters);
            
            // Search functionality with debounce
            let searchTimer;
            userSearch.addEventListener('input', function() {
                const clearBtn = document.getElementById('clear-search');
                clearBtn.style.display = this.value ? 'block' : 'none';
                
                clearTimeout(searchTimer);
                searchTimer = setTimeout(applyFilters, 500);
            });
            
            // Clear search
            document.getElementById('clear-search').addEventListener('click', function() {
                userSearch.value = '';
                this.style.display = 'none';
                applyFilters();
            });
            
            // Set initial filter values from URL
            const urlParams = new URLSearchParams(window.location.search);
            
            if (urlParams.has('role')) filterRole.value = urlParams.get('role');
            if (urlParams.has('status')) filterStatus.value = urlParams.get('status');
            if (urlParams.has('verified')) filterVerified.value = urlParams.get('verified');
            if (urlParams.has('search')) {
                userSearch.value = urlParams.get('search');
                document.getElementById('clear-search').style.display = 'block';
            }
            if (urlParams.has('perPage')) pageSize.value = urlParams.get('perPage');
            
            // Page navigation
            document.getElementById('goto-page').addEventListener('change', function() {
                const params = new URLSearchParams(window.location.search);
                params.set('page', this.value);
                window.location.href = '{{ path('admin_users') }}?' + params.toString();
            });

            // Initialize modals for view/edit/delete
            document.querySelectorAll('.view-user-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    const userId = this.getAttribute('data-user-id');
                    // Here you would fetch user details from the API
                    // For now, just show the modal
                    const modal = new bootstrap.Modal(document.getElementById('view-user-modal'));
                    modal.show();
                });
            });

            document.querySelectorAll('.edit-user-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    const userId = this.getAttribute('data-user-id');
                    // Here you would fetch user details from the API and populate the form
                    // For now, just show the modal
                    const modal = new bootstrap.Modal(document.getElementById('edit-user-modal'));
                    modal.show();
                });
            });

            document.querySelectorAll('.delete-user-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    const userId = this.getAttribute('data-user-id');
                    const userName = this.getAttribute('data-user-name');
                    
                    document.getElementById('delete-user-name').textContent = userName;
                    document.getElementById('confirm-delete-btn').setAttribute('data-user-id', userId);
                    
                    const modal = new bootstrap.Modal(document.getElementById('delete-user-modal'));
                    modal.show();
                });
            });
        });
    </script>
