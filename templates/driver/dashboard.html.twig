{% extends 'front/base.html.twig' %}

{% block title %}Driver Space{% endblock %}

{% block hero %}
<section class="page-header bg-primary text-white py-5">
    <div class="container">
        <div class="row">
            <div class="col-md-8 offset-md-2 text-center">
                <h1 class="display-4 fw-bold">Driver Space</h1>
                <p class="lead">Manage your trips, vehicles, and bookings</p>
            </div>
        </div>
    </div>
</section>
{% endblock %}

{% block content %}
<div class="container">
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="py-3">
                        <i class="fas fa-car fa-3x text-primary mb-3"></i>
                        <h3 class="h4 mb-2">My Vehicles</h3>
                        <p class="text-muted mb-0">Manage your registered vehicles</p>
                    </div>
                    <a href="#" class="btn btn-primary mt-3 stretched-link">View Vehicles</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="py-3">
                        <i class="fas fa-route fa-3x text-success mb-3"></i>
                        <h3 class="h4 mb-2">My Trips</h3>
                        <p class="text-muted mb-0">Manage your current and upcoming trips</p>
                    </div>
                    <a href="#" class="btn btn-success mt-3 stretched-link">View Trips</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="py-3">
                        <i class="fas fa-users fa-3x text-warning mb-3"></i>
                        <h3 class="h4 mb-2">Bookings</h3>
                        <p class="text-muted mb-0">See passenger bookings for your trips</p>
                    </div>
                    <a href="#" class="btn btn-warning mt-3 stretched-link">View Bookings</a>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row mt-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0">Recent Activity</h5>
                </div>
                <div class="card-body">
                    <div class="timeline">
                        <div class="timeline-item">
                            <div class="timeline-marker bg-primary"></div>
                            <div class="timeline-content">
                                <h3 class="timeline-title">Trip Request Approved</h3>
                                <p>Your trip from Tunis to Sousse on May 15 has been approved.</p>
                                <small class="text-muted">2 hours ago</small>
                            </div>
                        </div>
                        <div class="timeline-item">
                            <div class="timeline-marker bg-success"></div>
                            <div class="timeline-content">
                                <h3 class="timeline-title">New Booking</h3>
                                <p>Ahmed has booked a seat for your trip to Sousse.</p>
                                <small class="text-muted">Yesterday</small>
                            </div>
                        </div>
                        <div class="timeline-item">
                            <div class="timeline-marker bg-warning"></div>
                            <div class="timeline-content">
                                <h3 class="timeline-title">Driver Rating Updated</h3>
                                <p>You received a 5-star rating from your last passenger.</p>
                                <small class="text-muted">3 days ago</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .timeline {
        position: relative;
        padding-left: 30px;
    }
    
    .timeline-item {
        position: relative;
        padding-bottom: 30px;
    }
    
    .timeline-item:last-child {
        padding-bottom: 0;
    }
    
    .timeline-marker {
        position: absolute;
        width: 15px;
        height: 15px;
        border-radius: 50%;
        left: -30px;
        top: 4px;
    }
    
    .timeline-item:not(:last-child)::after {
        content: '';
        position: absolute;
        left: -23px;
        top: 22px;
        height: calc(100% - 18px);
        width: 2px;
        background-color: #e0e0e0;
    }
    
    .timeline-title {
        font-size: 1.1rem;
        margin-bottom: 5px;
    }
</style>
{% endblock %} 