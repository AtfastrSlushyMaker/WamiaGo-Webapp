<div class="modal-header bg-primary text-white">
    <div class="w-100">
        <div class="d-flex justify-content-between align-items-start">
            <div>
                <h5 class="modal-title mb-2">{{ announcement.title }}</h5>
                <span class="badge {% if announcement.status %}bg-success{% else %}bg-secondary{% endif %}">
                    {{ announcement.status ? 'Active' : 'Inactive' }}
                </span>
            </div>
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
    </div>
</div>

<div class="modal-body">
    <div class="row g-4">
        <div class="col-md-6">
            <div class="detail-card">
                <h6 class="detail-title">
                    <i class="fas fa-info-circle me-2"></i>Description
                </h6>
                <p class="detail-content">{{ announcement.content }}</p>
            </div>

            <div class="detail-card mt-4">
                <h6 class="detail-title">
                    <i class="fas fa-map-marked-alt me-2"></i>Zone
                </h6>
                <p class="detail-content">{{ announcement.zone.value }}</p>
            </div>
        </div>

        <div class="col-md-6">
            <div class="detail-card">
                <h6 class="detail-title">
                    <i class="fas fa-calendar-day me-2"></i>Date
                </h6>
                <p class="detail-content">{{ announcement.date|date('d M Y, H:i') }}</p>
            </div>

            <div class="detail-card mt-4">
                <h6 class="detail-title">
                    <i class="fas fa-user-tie me-2"></i>Transporter
                </h6>
                <div class="detail-content">
                    <p class="mb-1">{{ announcement.driver.user.name ?? 'Unknown' }}</p>
                    {% if announcement.driver.user.phone_number is not empty %}
                        <p class="mb-0 text-muted">
                            <i class="fas fa-phone me-2"></i>{{ announcement.driver.user.phone_number }}
                        </p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <div class="text-center mt-4 pt-3">
        <img src="{{ asset('images/front/announcements/transport-hero.png') }}" 
             alt="Transport illustration" 
             class="img-fluid rounded" 
             style="max-height: 180px;">
    </div>
</div>

<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
        <i class="fas fa-times me-2"></i> Close
    </button>
    <a href="{{ path('app_front_announcement_reserve', {'id': announcement.id_announcement}) }}" 
       class="btn btn-primary" id="modalReserveButton">
        <i class="fas fa-calendar-check me-2"></i> Reserve
    </a>
</div>
