<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="WamiaGo - Your transportation solution">
    <title>{% block title %}WamiaGo{% endblock %}</title>
    {% block stylesheets %}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
        <link rel="stylesheet" href="{{ asset('css/front_office.css') }}">
        {% block page_stylesheets %}{% endblock %}
    {% endblock %}
</head>
<body>
    {% block header %}
    <!-- Header with Navigation -->
    <header class="bg-dark text-white">
        <div class="top-bar bg-primary py-1">
            <div class="container d-flex justify-content-between">
                <div class="contact-info">
                    <span class="me-3"><i class="fas fa-phone-alt me-2"></i> +1-234-567-8900</span>
                    <span><i class="fas fa-envelope me-2"></i> info@wamiango.com</span>
                </div>
                <div class="social-links">
                    <a href="#" class="text-white me-2"><i class="fab fa-facebook-f"></i></a>
                    <a href="#" class="text-white me-2"><i class="fab fa-twitter"></i></a>
                    <a href="#" class="text-white me-2"><i class="fab fa-instagram"></i></a>
                </div>
            </div>
        </div>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand" href="{{ path('app_front_home') }}">
                    <img src="{{ asset('images/front/logo.png') }}" alt="WamiaGo Logo" height="40" class="me-2">
                    WamiaGo
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link {% if app.request.attributes.get('_route') == 'app_front_home' %}active{% endif %}" 
                               href="{{ path('app_front_home') }}">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {% if app.request.attributes.get('_route') == 'app_front_about' %}active{% endif %}" 
                               href="{{ path('app_front_about') }}">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {% if app.request.attributes.get('_route') == 'app_front_contact' %}active{% endif %}" 
                               href="{{ path('app_front_contact') }}">Contact</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-outline-primary btn-sm mt-1 ms-2" href="{{ path('app_login') }}">Login</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    {% endblock %}
    
    {% block main %}
    <main>
        {% block hero %}{% endblock %}
        
        <div class="container py-5">
            {% block content %}{% endblock %}
        </div>
    </main>
    {% endblock %}
    
    {% block footer %}
    <footer class="bg-dark text-white py-4">
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-4 mb-md-0">
                    <h5 class="mb-3">WamiaGo</h5>
                    <p class="mb-3">Your trusted transportation solution that connects people with efficient and reliable mobility options.</p>
                    <div class="d-flex social-icons">
                        <a href="#" class="me-2 social-icon"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="me-2 social-icon"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="me-2 social-icon"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="me-2 social-icon"><i class="fab fa-linkedin-in"></i></a>
                    </div>
                </div>
                <div class="col-md-2 mb-4 mb-md-0">
                    <h5 class="mb-3">Quick Links</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="{{ path('app_front_home') }}" class="footer-link">Home</a></li>
                        <li class="mb-2"><a href="{{ path('app_front_about') }}" class="footer-link">About Us</a></li>
                        <li class="mb-2"><a href="{{ path('app_front_contact') }}" class="footer-link">Contact Us</a></li>
                    </ul>
                </div>
                <div class="col-md-3 mb-4 mb-md-0">
                    <h5 class="mb-3">Services</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="#" class="footer-link">Ride Sharing</a></li>
                        <li class="mb-2"><a href="#" class="footer-link">Bicycle Rentals</a></li>
                        <li class="mb-2"><a href="#" class="footer-link">Transportation News</a></li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h5 class="mb-3">Contact Info</h5>
                    <ul class="list-unstyled contact-info">
                        <li class="mb-2"><i class="fas fa-map-marker-alt me-2"></i> 123 Street, City, Country</li>
                        <li class="mb-2"><i class="fas fa-phone-alt me-2"></i> +1-234-567-8900</li>
                        <li class="mb-2"><i class="fas fa-envelope me-2"></i> info@wamiango.com</li>
                    </ul>
                </div>
            </div>
            <hr class="my-4">
            <div class="row">
                <div class="col-md-6 text-center text-md-start">
                    <p class="mb-0">&copy; {{ "now"|date("Y") }} WamiaGo. All rights reserved.</p>
                </div>
                <div class="col-md-6 text-center text-md-end">
                    <a href="#" class="text-white me-3">Privacy Policy</a>
                    <a href="#" class="text-white">Terms of Service</a>
                </div>
            </div>
        </div>
    </footer>
    {% endblock %}

    {% block javascripts %}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
        <script src="{{ asset('js/front/front.js') }}"></script>
        <script src="{{ asset('js/front/taxi.js') }}"></script>
        {% block page_javascripts %}{% endblock %}
    {% endblock %}
</body>
</html>