
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="WamiaGo - Your transportation solution">
    <title>{% block title %}WamiaGo{% endblock %}</title>
    {% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="{{ asset('css/front/base.css') }}?v={{ 'now'|date('YmdHi') }}" rel="stylesheet">
    <link href="{{ asset('css/front/dark-mode.css') }}?v={{ 'now'|date('YmdHi') }}" rel="stylesheet">
    {% if app.request.attributes.get('_route') == 'app_front_home' %}
    <link href="{{ asset('css/front/index.css') }}?v={{ 'now'|date('YmdHi') }}" rel="stylesheet">
    {% endif %}
    {% if app.request.attributes.get('_route') starts with 'app_front_service' %}
    <link href="{{ asset('css/front/services.css') }}?v={{ 'now'|date('YmdHi') }}" rel="stylesheet">
    {% endif %}
    {% if app.request.attributes.get('_route') == 'app_front_contact' %}
    <link href="{{ asset('css/front/contact.css') }}?v={{ 'now'|date('YmdHi') }}" rel="stylesheet">
    {% endif %}
    <link rel="icon" type="image/x-icon" href="{{ asset('images/logo/logo.png') }}">
    {% block page_stylesheets %}{% endblock %}
    {% endblock %}
</head>
<body>
    {% block header %}
    <!-- Header with Navigation -->
    <header class="bg-dark text-white">
        <div class="top-bar bg-primary py-1">
            <div class="container d-flex justify-content-between align-items-center">
                <div class="contact-info">
                    <span class="me-3"><i class="fas fa-phone-alt me-2"></i> +1-234-567-8900</span>
                    <span><i class="fas fa-envelope me-2"></i> info@wamiango.com</span>
                </div>
                <div class="d-flex align-items-center">
                    <div class="social-links me-3">
                        <a href="#" class="text-white me-2"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="text-white me-2"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="text-white me-2"><i class="fab fa-instagram"></i></a>
                    </div>
                    <button id="darkModeToggle" class="btn btn-sm btn-outline-light" aria-label="Toggle dark mode">
                        <i class="fas fa-moon text-white"></i>
                    </button>
                </div>
            </div>
        </div>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand" href="{{ path('app_front_home') }}">
                    <img src="{{ asset('images/logo/logo.png') }}" alt="WamiaGo Logo" height="80" class="me-2">
                    WamiaGo
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link {% if app.request.attributes.get('_route') == 'app_front_home' %}active{% endif %}" 
                               href="{{ path('app_front_home') }}">Home</a>
                        </li>
                        <li class="nav-item dropdown">
                            <button class="nav-link dropdown-toggle {% if app.request.attributes.get('_route') starts with 'app_front_service' %}active{% endif %}" 
                                    type="button" data-bs-toggle="dropdown" data-bs-auto-close="outside" onKeyDown="if(event.key === 'Enter') this.click();">
                                <i class="fas fa-concierge-bell me-1"></i> Services <i class="fas fa-chevron-down ms-1 dropdown-toggle-arrow"></i>
                            </button>
                            <ul class="dropdown-menu">
                                <li><h6 class="dropdown-header">Our Transportation Services</h6></li>
                                <li><a class="dropdown-item" href="#"><i class="fas fa-car"></i>Ride Sharing</a></li>
                                <li><a class="dropdown-item" href="#"><i class="fas fa-taxi"></i>Taxi Service</a></li>
                                <li><a class="dropdown-item" href="#"><i class="fas fa-bicycle"></i>Bicycle Rentals</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><h6 class="dropdown-header">Special Services</h6></li>
                                <li><a class="dropdown-item" href="#"><i class="fas fa-truck-moving"></i>Relocation Transport</a></li>
                                <li><a class="dropdown-item" href="#"><i class="fas fa-info-circle"></i>All Services<span class="ms-2 badge bg-primary">New</span></a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {% if app.request.attributes.get('_route') == 'app_front_about' %}active{% endif %}" 
                               href="{{ path('app_front_about') }}">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {% if app.request.attributes.get('_route') == 'app_front_contact' %}active{% endif %}" 
                               href="{{ path('app_front_contact') }}">Contact</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-outline-primary btn-sm mt-1 ms-2" href="#">Login</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    {% endblock %}
    
    {% block main %}
    <main>
        {% block hero %}{% endblock %}
        
        <div class="container py-5">
            {% block content %}{% endblock %}
        </div>
    </main>
    {% endblock %}
    
    {% block footer %}
    <footer class="bg-dark text-white py-4">
        <div class="container">
            <div class="row mb-4">
                <div class="col-md-4 mb-4 mb-md-0">
                    <h5 class="mb-3">WamiaGo</h5>
                    <p class="mb-3">Your trusted transportation solution that connects people with efficient and reliable mobility options.</p>
                    <div class="d-flex social-icons">
                        <a href="#" class="me-2 social-icon"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="me-2 social-icon"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="me-2 social-icon"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="me-2 social-icon"><i class="fab fa-linkedin-in"></i></a>
                    </div>
                </div>
                <div class="col-md-3 mb-4 mb-md-0">
                    <h5 class="mb-3">Quick Links</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="{{ path('app_front_home') }}" class="footer-link">Home</a></li>
                        <li class="mb-2"><a href="{{ path('app_front_about') }}" class="footer-link">About Us</a></li>
                        <li class="mb-2"><a href="#" class="footer-link">Relocation Services</a></li>
                        <li class="mb-2"><a href="{{ path('app_front_contact') }}" class="footer-link">Contact Us</a></li>
                    </ul>
                </div>  
                <div class="col-md-3">
                    <h5 class="mb-3">Newsletter</h5>
                    <p class="mb-3">Subscribe for relocation and transport announcements</p>
                    <form>
                        <div class="input-group mb-3">
                            <input type="email" class="form-control" placeholder="Email Address" aria-label="Email Address">
                            <button class="btn btn-primary" type="submit"><i class="fas fa-paper-plane"></i></button>
                        </div>
                    </form>
                </div>
            </div>
            
            <hr class="border-secondary">
            
            <div class="row">
                <div class="col-md-6 mb-2 mb-md-0">
                    <p class="mb-0">&copy; 2025 WamiaGo. All rights reserved.</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <a href="#" class="footer-link me-3">Privacy Policy</a>
                    <a href="#" class="footer-link me-3">Terms of Service</a>
                    <a href="#" class="footer-link">Cookies Policy</a>
                </div>
            </div>
        </div>
    </footer>
    {% endblock %}

    {% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="{{ asset('js/front/dark-mode.js') }}?v={{ 'now'|date('YmdHi') }}"></script>
    <script src="{{ asset('js/front/front.js') }}?v={{ 'now'|date('YmdHi') }}"></script>
    <script src="{{ asset('js/front/taxi.js') }}?v={{ 'now'|date('YmdHi') }}"></script>
    {% block page_javascripts %}{% endblock %}
    {% endblock %}
</body>
</html>