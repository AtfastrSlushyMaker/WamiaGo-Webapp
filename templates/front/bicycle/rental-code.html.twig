{% extends 'front/base.html.twig' %}

{% block title %}Bicycle Details - WamiaGo{% endblock %}

{% block page_stylesheets %}
    <link href="{{ asset('css/front/Bicycle/bicycle-rental.css') }}?v={{ 'now'|date('YmdHi') }}" rel="stylesheet">
    <style>
        .rental-container {
            max-width: 600px;
            margin: 0 auto;
        }
        
        .code-display {
            background-color: #f8f9fa;
            border: 2px dashed #dee2e6;
            border-radius: 8px;
            padding: 20px;
            text-align: center;
            margin: 25px 0;
            font-size: 32px;
            font-weight: bold;
            letter-spacing: 3px;
            cursor: pointer;
        }
        
        .qr-container {
            background-color: white;
            padding: 20px;
            border-radius: 8px;
            display: inline-block;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
        }
        
        .bicycle-info {
            background-color: #f8f9fa;
            border-radius: 8px;
            padding: 20px;
            margin-top: 25px;
        }
        
        .battery-indicator {
            height: 10px;
            background-color: #e9ecef;
            border-radius: 5px;
            overflow: hidden;
            margin: 8px 0;
        }
        
        .battery-level {
            height: 100%;
            background: linear-gradient(90deg, #28a745, #20c997);
        }
    </style>
{% endblock %}

{% block content %}
<div class="container py-5">
    <div class="rental-container">
        <h1 class="text-center mb-4">Bicycle Details</h1>
        
        <div class="card border-0 shadow-sm">
            <div class="card-body p-4 text-center">
                <p class="lead mb-3">Your reservation for bicycle #{{ rental.bicycle.idBike }}</p>
                
                <div class="text-center">
                    <div class="qr-container">
                        <p class="mb-3">Bicycle Details QR Code:</p>
                        <img src="https://api.qrserver.com/v1/create-qr-code/?size=200x200&data={% set bicycleDetails = {
                            'bicycle_id': rental.bicycle.idBike,
                            'type': rental.bicycle.batteryLevel > 90 ? 'Premium E-Bike' : 'Standard E-Bike',
                            'battery_level': rental.bicycle.batteryLevel,
                            'range_km': rental.bicycle.rangeKm,
                            'station': rental.startStation.name,
                            'hourly_rate': rental.bicycle.batteryLevel > 90 ? '5.000' : '3.500'
                        } %}{{ bicycleDetails|json_encode|url_encode }}" 
                             alt="QR Code for bicycle details" class="img-fluid">
                    </div>
                    <p class="text-muted mb-4">Scan this QR code to view bicycle details</p>
                </div>
                
                <a href="{{ path('app_rental_activate', {'id': rental.idUserRental}) }}" class="btn btn-success btn-lg mb-3">
                    <i class="fas fa-unlock me-2"></i> Unlock Bicycle Now
                </a>
            </div>
        </div>
        
        <div class="bicycle-info">
            <h4 class="mb-3">Rental Details</h4>
            <div class="row">
                <div class="col-md-6">
                    <p><strong>Rental ID:</strong> #{{ rental.idUserRental }}</p>
                    <p><strong>Reserved On:</strong> {{ rental.startTime ? rental.startTime|date('Y-m-d H:i') : 'Not started' }}</p>
                    <p><strong>Estimated Cost:</strong> {{ rental.cost|number_format(3) }} TND</p>
                    {% if rental.startTime %}
                        <p><strong>Status:</strong> <span class="badge bg-success">Active</span></p>
                    {% else %}
                        <p><strong>Status:</strong> <span class="badge bg-warning text-dark">Reserved</span></p>
                    {% endif %}
                </div>
                <div class="col-md-6">
                    <p><strong>Pickup Station:</strong> {{ rental.startStation.name }}</p>
                    <p><strong>Address:</strong> 
                        {% if rental.startStation.location %}
                            {{ rental.startStation.location.address }}
                        {% else %}
                            No address available
                        {% endif %}
                    </p>
                    {% if rental.endTime %}
                        <p><strong>Return Time:</strong> {{ rental.endTime|date('Y-m-d H:i') }}</p>
                        <p><strong>Return Station:</strong> {{ rental.endStation ? rental.endStation.name : 'Not returned' }}</p>
                    {% endif %}
                </div>
            </div>
            
            <h4 class="mt-4 mb-3">Bicycle Information</h4>
            <div class="row">
                <div class="col-md-6">
                    <p><strong>Bicycle ID:</strong> #{{ rental.bicycle.idBike }}</p>
                    <p><strong>Type:</strong> {{ rental.bicycle.batteryLevel > 90 ? 'Premium' : 'Standard' }} E-Bike</p>
                    <p><strong>Battery Level:</strong> {{ rental.bicycle.batteryLevel }}%</p>
                    <div class="battery-indicator">
                        <div class="battery-level" style="width: {{ rental.bicycle.batteryLevel }}%"></div>
                    </div>
                </div>
                <div class="col-md-6">
                    <p><strong>Estimated Range:</strong> {{ rental.bicycle.rangeKm }} km</p>
                    <p><strong>Hourly Rate:</strong> {{ rental.bicycle.batteryLevel > 90 ? '5.000' : '3.500' }} TND</p>
                    <p><strong>Last Updated:</strong> {{ rental.bicycle.lastUpdated|date('Y-m-d H:i') }}</p>
                </div>
            </div>
        </div>
        
        <div class="text-center mt-4">
            <a href="{{ path('app_front_my_reservations') }}" class="btn btn-outline-secondary me-2">
                <i class="fas fa-arrow-left me-2"></i> Back to My Reservations
            </a>
            <form method="post" action="{{ path('app_front_cancel_rental', {'id': rental.idUserRental}) }}" class="d-inline">
                <input type="hidden" name="_token" value="{{ csrf_token('cancel' ~ rental.idUserRental) }}">
                <button type="submit" class="btn btn-outline-danger" onclick="return confirm('Are you sure you want to cancel this reservation?');">
                    <i class="fas fa-times me-2"></i> Cancel Reservation
                </button>
            </form>
        </div>
    </div>
</div>
{% endblock %}