{% extends 'front/base.html.twig' %}

{% block title %}{{ title }} - WamiaGo{% endblock %}

{% block hero %}
<section class="hero position-relative">
    <div id="heroCarousel" class="carousel slide" data-bs-ride="carousel" aria-label="Featured services carousel">
        <div class="carousel-indicators" role="tablist">
            <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1" role="tab"></button>
            <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="1" aria-label="Slide 2" role="tab"></button>
            <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="2" aria-label="Slide 3" role="tab"></button>
            <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="3" aria-label="Slide 4" role="tab"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <div class="hero-slide bg-primary">
                    <div class="container">
                        <div class="row align-items-center">
                            <div class="col-lg-6 text-white">
                                <h1 class="display-4 fw-bold mb-4 animate__animated animate__fadeInUp">Ride Sharing Made Simple</h1>
                                <p class="lead mb-4 animate__animated animate__fadeInUp animate__delay-1s">Connect with other travelers for a more sustainable and economical journey.</p>
                                <div class="animate__animated animate__fadeInUp animate__delay-2s">
                                    <a href="{{ path('app_carpooling') }}" class="btn btn-light btn-lg me-2">Find a Ride</a>
                                    <a href="{{ path('app_trip_owner') }}" class="btn btn-outline-light btn-lg">Offer a Ride</a>
                                </div>
                            </div>
                            <div class="col-lg-6 d-none d-lg-block animate__animated animate__fadeInRight">
                                <div class="carousel-image-wrapper">
                                    <img src="{{ asset('images/front/carpool.png') }}" alt="Ride Sharing" class="carousel-image">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <div class="hero-slide bg-warning">
                    <div class="container">
                        <div class="row align-items-center">
                            <div class="col-lg-6 text-white">
                                <h1 class="display-4 fw-bold mb-4">Taxi On Demand</h1>
                                <p class="lead mb-4">Get a reliable taxi at your doorstep with just a few taps.</p>
                                <a href="#" class="btn btn-light btn-lg">Book Now</a>
                            </div>
                            <div class="col-lg-6 d-none d-lg-block">
                                <div class="carousel-image-wrapper">
                                    <img src="{{ asset('images/front/taxi.png') }}" alt="Taxi Services" class="carousel-image">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <div class="hero-slide bg-success">
                    <div class="container">
                        <div class="row align-items-center">
                            <div class="col-lg-6 text-white">
                                <h1 class="display-4 fw-bold mb-4">Bicycle Rentals</h1>
                                <p class="lead mb-4">Explore the city on two wheels with our convenient bicycle rental service.</p>
                                <a href="{{ path('app_front_services_bicycle') }}" class="btn btn-light btn-lg">Rent Now</a>
                            </div>
                            <div class="col-lg-6 d-none d-lg-block">
                                <div class="carousel-image-wrapper">
                                    <img src="{{ asset('images/front/bicycle.png') }}" alt="Bicycle Rentals" class="carousel-image">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <div class="hero-slide bg-info">
                    <div class="container">
                        <div class="row align-items-center">
                            <div class="col-lg-6 text-white">
                                <h1 class="display-4 fw-bold mb-4">Moving Made Easy</h1>
                                <p class="lead mb-4">Book relocation services for your moving needs with professional transport providers.</p>
                                <a href="{{ path('app_front_announcements') }}" class="btn btn-light btn-lg">View Relocation Services</a>
                            </div>
                            <div class="col-lg-6 d-none d-lg-block">
                                <div class="carousel-image-wrapper">
                                    <img src="{{ asset('images/front/truck.png') }}" alt="Transportation Services" class="carousel-image">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</section>
{% endblock %}

{% block content %}
<section class="features mb-5">
    <h2 class="text-center mb-5">Our Services</h2>
    <div class="row g-4">
        <div class="col-md-3">
            <div class="card h-100 service-card ride-sharing-card">
                <div class="card-body text-center p-4 d-flex flex-column">
                    <div class="icon-wrapper mb-4">
                        <i class="fas fa-car fa-3x text-primary"></i>
                    </div>
                    <h3 class="card-title h4 mb-3">Ride Sharing</h3>
                    <p class="card-text">Share your journey with others going the same way. Save money, reduce emissions, and make connections.</p>
                    <a href="{{ path('app_carpooling_client_booking') }}" class="btn btn-outline-primary mt-auto">See my bookings</a>                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card h-100 service-card taxi-card">
                <div class="card-body text-center p-4 d-flex flex-column">
                    <div class="icon-wrapper mb-4">
                        <i class="fas fa-taxi fa-3x text-warning"></i>
                    </div>
                    <h3 class="card-title h4 mb-3">Taxi Service</h3>
                    <p class="card-text">Book a professional taxi with licensed drivers for safe and comfortable rides any time of day.</p>
                     <a href="{{ path('app_taxi_management') }}" class="btn btn-outline-warning mt-auto">Book a Taxi</a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card h-100 service-card bicycle-card">
                <div class="card-body text-center p-4 d-flex flex-column">
                    <div class="icon-wrapper mb-4">
                        <i class="fas fa-bicycle fa-3x text-bicycle"></i>
                    </div>
                    <h3 class="card-title h4 mb-3">Bicycle Rentals</h3>
                    <p class="card-text">Rent a bicycle and explore the city at your own pace. Eco-friendly and healthy transportation.</p>
                    <a href="{{ path('app_front_services_bicycle') }}" class="btn btn-outline-bicycle mt-auto">Rent Now</a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card h-100 service-card news-card">
                <div class="card-body text-center p-4 d-flex flex-column">
                    <div class="icon-wrapper mb-4">
                        <i class="fas fa-truck-moving fa-3x text-info"></i>
                    </div>
                    <h3 class="card-title h4 mb-3">Relocation Services</h3>
                    <p class="card-text">Book professional transport services for moving or relocating your belongings safely.</p>
                    <a href="{{ path('app_front_announcements') }}" class="btn btn-outline-info mt-auto">Book Relocation</a>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="taxi-booking py-5 bg-light rounded-3 mb-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 mb-4 mb-lg-0">
                <h2>Need a ride now?</h2>
                <p class="lead mb-4">Book a taxi with our reliable service and get to your destination safely and on time.</p>
                <ul class="list-unstyled mb-4">
                    <li class="mb-2"><i class="fas fa-check-circle text-success me-2"></i> Professional licensed drivers</li>
                    <li class="mb-2"><i class="fas fa-check-circle text-success me-2"></i> Clean and comfortable vehicles</li>
                    <li class="mb-2"><i class="fas fa-check-circle text-success me-2"></i> Real-time tracking and updates</li>
                    <li class="mb-2"><i class="fas fa-check-circle text-success me-2"></i> Multiple payment options</li>
                </ul>
                <a href="#" class="btn btn-warning btn-lg">Book a Taxi</a>
            </div>
            <div class="col-lg-6">
                <div class="card border-0 shadow-sm">
                    <div class="card-body p-4">
                        <h3 class="card-title mb-4">Quick Booking</h3>
                        <form id="quickTaxiForm">
                            <div class="mb-3">
                                <label for="pickup" class="form-label">Pickup Location</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-map-marker-alt"></i></span>
                                    <input type="text" class="form-control" id="pickup" placeholder="Enter pickup address">
                                </div>
                            </div>
                            <div class="mb-3">
                                <label for="destination" class="form-label">Destination</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-flag-checkered"></i></span>
                                    <input type="text" class="form-control" id="destination" placeholder="Enter destination address">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="pickupTime" class="form-label">Pickup Time</label>
                                    <select class="form-select" id="pickupTime">
                                        <option value="now">Now</option>
                                        <option value="later">Schedule for Later</option>
                                    </select>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="passengers" class="form-label">Passengers</label>
                                    <select class="form-select" id="passengers">
                                        <option value="1">1 Person</option>
                                        <option value="2">2 People</option>
                                        <option value="3">3 People</option>
                                        <option value="4">4 People</option>
                                    </select>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-warning w-100">Get Price Estimate</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="how-it-works py-5 bg-light rounded-3 mb-5">
    <div class="text-center mb-5">
        <h2 class="mb-3">How It Works</h2>
        <p class="lead">Simple steps to start using WamiaGo services</p>
