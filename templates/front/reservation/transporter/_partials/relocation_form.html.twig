<form id="relocationForm" method="post" action="{{ path('app_relocation_create', {'id': reservation.id_reservation}) }}">
    <div class="row g-3">
        <div class="col-md-6">
            <div class="form-group">
                <label class="form-label">Date</label>
                <input type="date" name="date" class="form-control" required>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label class="form-label">Cost (â‚¬)</label>
                <input type="number" name="cost" step="0.01" class="form-control" required>
            </div>
        </div>
        <div class="col-12">
            <input type="hidden" name="_token" value="{{ csrf_token('relocation' ~ reservation.id_reservation) }}">
            <button type="submit" class="btn btn-primary w-100">
                <i class="fas fa-check-circle me-2"></i> Confirm Relocation
            </button>
        </div>
    </div>
</form>