{% extends 'front/base.html.twig' %}

{% block title %}My Reservations | TransportApp{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/front/announcement/announcement-cards.css') }}">
    <link rel="stylesheet" href="{{ asset('css/front/announcement/modal-details.css') }}">
    <link rel="stylesheet" href="{{ asset('css/front/reservation/reservation-cards.css') }}">
{% endblock %}

{% block content %}
<div class="transporter-reservations-container">
    <!-- Header Section -->
    <div class="announcements-header">
        <h1><i class="fas fa-calendar-check"></i> My Transport Reservations</h1>
        
        <div class="action-buttons">
            <a href="{{ path('app_transporter_announcement_list') }}" class="btn">
                <i class="fas fa-truck"></i> See Announcements
            </a>
            <button class="btn btn-primary" disabled>
                <i class="fas fa-truck-moving"></i> See Relocations
            </button>
        </div>
    </div>

    <!-- Temporary Alert -->
    <div class="alert alert-warning mb-4">
        <i class="fas fa-exclamation-triangle me-2"></i>
        System is currently using test driver (ID: 6) - Authentication coming soon
    </div>

    <!-- Reservations Grid -->
    {% if reservations is empty %}
        <div class="empty-state">
            <img src="{{ asset('images/front/reservation/empty-state.png') }}" alt="No reservations">
            <h3>No reservations yet</h3>
            <p>When clients book your transport services, reservations will appear here</p>
        </div>
    {% else %}
        <div class="announcements-grid">
            {% for reservation in reservations %}
                <div class="announcement-card reservation-card {{ reservation.status.value|lower }}" 
                     data-id="{{ reservation.id_reservation }}">
                    <div class="card-header">
                        <div class="card-badge {{ reservation.status.value|lower }}">
                            {{ reservation.status.value }}
                        </div>
                        <h3 class="card-title">{{ reservation.announcement.title }}</h3>
                    </div>
                    
                    <div class="card-body">
                        <p class="card-content">
                            {{ reservation.description|length > 120 ? 
                               reservation.description|slice(0, 120) ~ '...' : 
                               reservation.description }}
                        </p>
                        
                        <div class="card-meta">
                            <div class="meta-item">
                                <i class="fas fa-calendar-alt"></i>
                                <span>{{ reservation.date|date('d M Y, H:i') }}</span>
                            </div>
                            <div class="meta-item">
                                <i class="fas fa-user"></i>
                                <span>{{ reservation.user.name }}</span>
                            </div>
                        </div>

                        <div class="locations">
                            <div class="meta-item">
                                <i class="fas fa-map-marker-alt"></i>
                                <span>{{ reservation.startLocation.address }}</span>
                            </div>
                            <div class="meta-item">
                                <i class="fas fa-flag-checkered"></i>
                                <span>{{ reservation.endLocation.address }}</span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="card-footer">
                        <button class="btn-details" data-id="{{ reservation.id_reservation }}">
                            <i class="fas fa-eye"></i> Details
                        </button>
                        
                        {% if reservation.status.value == 'ON_GOING' %}
                            <button class="btn-accept" data-id="{{ reservation.id_reservation }}">
                                <i class="fas fa-check"></i> Accept
                            </button>
                            <button class="btn-refuse" data-id="{{ reservation.id_reservation }}">
                                <i class="fas fa-times"></i> Refuse
                            </button>
                        {% endif %}
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}

    <!-- Toast Container -->
    <div id="toast-container" class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 1100"></div>

    <!-- Modals -->
    {% include 'front/reservation/transporter/_partials/details_modal.html.twig' %}
    {% include 'front/reservation/transporter/_partials/relocation_modal.html.twig' %}
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/front/reservation/transporter-reservation.js') }}"></script>
{% endblock %}