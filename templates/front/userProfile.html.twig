                        <a href="{{ path('app_face_manage') }}" class="btn btn-outline-success">
                            <i class="fas fa-check-circle me-2"></i> Manage Face Login
                        </a>
                    {% else %}
                        <a href="{{ path('app_face_setup') }}" class="btn btn-primary">
                            <i class="fas fa-camera me-2"></i> Set Up Face Login
                        </a>
                    {% endif %}
                </div>
            </div>

            <!-- Face setup instructions -->
            <div class="alert alert-info mt-3">
                <i class="fas fa-info-circle me-2"></i>
                <strong>Face Recognition:</strong> 
                {% if app.user.isFaceRecognitionEnabled() %}
                    Your face recognition is set up and ready to use. You can log in without a password!
                {% else %}
                    Setup facial recognition to log in quickly without entering your password.
                {% endif %}
                        </div>
        </div>
    </div>
{% endblock %}

{% if block('javascripts') is defined %}
    {% block javascripts %}
        {{ parent() }}
        
        <script>
            document.addEventListener('DOMContentLoaded', function() {
                // Face recognition button override
                const setupFaceLinks = document.querySelectorAll('[data-bs-target="#faceSetupModal"]');
                
                setupFaceLinks.forEach(link => {
                    link.removeAttribute('data-bs-toggle');
                    link.removeAttribute('data-bs-target');
                    link.setAttribute('href', '{{ path("app_face_setup") }}');
                    
                    link.addEventListener('click', function(e) {
                        e.preventDefault();
                        window.location.href = '{{ path("app_face_setup") }}';
                    });
                });
            });
        </script>
    {% endblock %}
{% endif %}
{% endblock %}