{% extends 'front/base.html.twig' %}

{% block title %}My Profile - WamiaGo{% endblock %}

{% block page_stylesheets %}
<style>
    /* Custom styles for profile page */
    .profile-header {
        background: linear-gradient(135deg, #4e73df 0%, #224abe 100%);
        color: white;
        padding: 3rem 0;
        border-radius: 0.5rem;
        margin-bottom: 2rem;
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        position: relative;
    }
    
    .profile-image-container {
        position: relative;
        width: 220px;
        height: 220px;
        margin: 0 auto;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    .profile-image {
        width: 210px;
        height: 210px;
        object-fit: cover;
        border: 3px solid white;
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
        border-radius: 50%;
        position: absolute;
        z-index: 2;
        animation: profilePulse 2s infinite alternate ease-in-out;
    }
    
    @keyframes profilePulse {
        0% {
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
        }
        100% {
            box-shadow: 0 0.5rem 1.5rem rgba(78, 115, 223, 0.3);
        }
    }
    
    .profile-image:hover {
        transform: scale(1.05);
        animation: none;
    }
    
    /* Camera button styles */
    .change-avatar-btn {
        opacity: 0.8;
    }
    
    .change-avatar-btn:hover {
        transform: scale(1.1);
        opacity: 1;
    }
    
    .profile-image-container:hover .change-avatar-btn {
        opacity: 1;
    }
    
    /* Circular progress bar */
    .circle-progress-container {
        position: absolute;
        width: 220px;
        height: 220px;
        border-radius: 50%;
        background-color: rgba(255, 255, 255, 0.2);
        z-index: 1;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    .circle-progress-container:hover {
        transform: scale(1.05);
    }
    
    .circle-progress {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        border-radius: 50%;
        background: conic-gradient(#1cc88a 0% var(--progress), transparent var(--progress) 100%);
        mask: radial-gradient(transparent 102px, black 104px);
        -webkit-mask: radial-gradient(transparent 102px, black 104px);
    }
    
    .progress-percentage {
        position: absolute;
        bottom: -5px;
        left: 50%;
        transform: translateX(-50%);
        background-color: #1cc88a;
        color: white;
        font-weight: bold;
        padding: 4px 10px;
        border-radius: 15px;
        font-size: 0.85rem;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
        z-index: 3;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
    }
    
    .progress-percentage:hover {
        transform: translateX(-50%) scale(1.1);
    }
    
    .progress-percentage:after {
        content: "✓";
        margin-left: 5px;
        font-size: 0.8rem;
    }
    
    .profile-card {
        border-radius: 0.5rem;
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        transition: all 0.3s ease;
        margin-bottom: 1.5rem;
        border: none;
    }
    
    .profile-card:hover {
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
        transform: translateY(-5px);
    }
    
    .section-heading {
        border-left: 4px solid #4e73df;
        padding-left: 1rem;
        margin-bottom: 1.5rem;
    }
    
    .info-item {
        padding: 1rem;
        border-radius: 0.5rem;
        margin-bottom: 1rem;
        background-color: #f8f9fa;
        transition: all 0.3s ease;
    }
    
    .info-item:hover {
        background-color: #e9ecef;
    }
    
    .info-label {
        font-weight: 600;
        color: #495057;
    }
    
    .info-value {
        color: #212529;
    }
    
    .btn-action {
        border-radius: 50px;
        padding: 0.5rem 1.5rem;
    }
    
    .progress {
        height: 10px;
        border-radius: 5px;
    }
    
    .progress-bar {
        background: linear-gradient(90deg, #4e73df 0%, #224abe 100%);
    }
    
    .badge-status {
        padding: 0.5rem 1rem;
        border-radius: 50px;
        font-weight: 500;
        font-size: 0.8rem;
    }
    
    .verified {
        background-color: #1cc88a;
        color: white;
    }
    
    .unverified {
        background-color: #f6c23e;
        color: white;
    }
    
    .modal-content {
        border-radius: 0.5rem;
        border: none;
    }
    
    .nav-pills .nav-link.active {
        background-color: #4e73df;
    }
    
    .nav-pills .nav-link {
        color: #4e73df;
    }
    
    .avatar-upload {
        position: relative;
    }
    
    .avatar-edit {
        position: absolute;
        right: 5px;
        bottom: 0px;
        z-index: 10;
    }
    
    .avatar-preview {
        position: relative;
        width: 150px;
        height: 150px;
        border-radius: 100%;
        overflow: hidden;
        box-shadow: 0 0 10px rgba(0,0,0,0.2);
        margin: 0 auto;
    }
    
    .form-floating {
        margin-bottom: 1.25rem;
    }
    
    .card-header-tabs {
        margin-right: -1rem;
        margin-left: -1rem;
    }
    
    .password-strength {
        height: 5px;
        margin-top: 0.5rem;
    }
</style>
{% endblock %}

{% block content %}
<div class="container py-5">
    <!-- Profile Header -->
    <div class="profile-header mb-4 text-center text-lg-start">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-3 text-center mb-4 mb-lg-0">
                    {% set profileCompletion = 0 %}
                    {% if app.user.profilePicture %}{% set profileCompletion = profileCompletion + 30 %}{% endif %}
                    {% if app.user.verified %}{% set profileCompletion = profileCompletion + 20 %}{% endif %}
                    {% if app.user.name %}{% set profileCompletion = profileCompletion + 10 %}{% endif %}
                    {% if app.user.email %}{% set profileCompletion = profileCompletion + 10 %}{% endif %}
                    {% if app.user.phoneNumber %}{% set profileCompletion = profileCompletion + 10 %}{% endif %}
                    {% if twoFactorEnabled %}{% set profileCompletion = profileCompletion + 20 %}{% endif %}
                    
                    <div class="profile-image-container">
                        <div class="circle-progress-container" 
                             data-bs-toggle="tooltip" 
                             data-bs-html="true" 
                             data-bs-placement="bottom" 
                             title="<div class='text-center mb-2'><strong>Profile Completion</strong></div>
                                   <div class='tooltip-progress-item'>
                                     <span class='{% if app.user.name and app.user.email %}complete{% endif %}'>Basic Info</span>
                                     <i class='fas fa-check-circle {% if app.user.name and app.user.email %}complete{% else %}incomplete{% endif %}'></i>
                                   </div>
                                   <div class='tooltip-progress-item'>
                                     <span class='{% if app.user.profilePicture %}complete{% endif %}'>Profile Picture</span>
                                     <i class='fas fa-check-circle {% if app.user.profilePicture %}complete{% else %}incomplete{% endif %}'></i>
                                   </div>
                                   <div class='tooltip-progress-item'>
                                     <span class='{% if app.user.gender and app.user.phone_number %}complete{% endif %}'>Personal Details</span>
                                     <i class='fas fa-check-circle {% if app.user.gender and app.user.phone_number %}complete{% else %}incomplete{% endif %}'></i>
                                   </div>
                                   <div class='tooltip-progress-item'>
                                     <span class='{% if app.user.location %}complete{% endif %}'>Location Info</span>
                                     <i class='fas fa-check-circle {% if app.user.location %}complete{% else %}incomplete{% endif %}'></i>
                                   </div>
                                   <div class='tooltip-progress-item'>
                                     <span class='{% if twoFactorEnabled %}complete{% endif %}'>2FA Enabled</span>
                                     <i class='fas fa-check-circle {% if twoFactorEnabled %}complete{% else %}incomplete{% endif %}'></i>
                                   </div>">
                            <div class="circle-progress" style="--progress: {{ profileCompletion }}%;"></div>
                        </div>
                        {% if app.user.profilePicture %}
                            <img src="{{ app.user.profilePicture }}" alt="Profile Picture" class="profile-image profile-avatar">
                        {% else %}
                            <img src="{{ asset('images/default-avatar.png') }}" alt="Default Profile Picture" class="profile-image profile-avatar">
                        {% endif %}
                        <div class="progress-percentage" 
                             data-bs-toggle="tooltip" 
                             data-bs-placement="bottom" 
                             title="Profile completion percentage">{{ profileCompletion }}%</div>
                        <button type="button" class="btn btn-primary btn-sm rounded-circle position-absolute change-avatar-btn" 
                                style="bottom: 15px; right: 15px; z-index: 10; width: 45px; height: 45px; display: flex; align-items: center; justify-content: center; box-shadow: 0 3px 8px rgba(0,0,0,0.3); transition: all 0.3s ease;" 
                                data-bs-toggle="modal" data-bs-target="#changeAvatarModal"
                                data-bs-toggle="tooltip" data-bs-placement="left" title="Change profile picture">
                            <i class="fas fa-camera fa-lg"></i>
                        </button>
                    </div>
                </div>
                <div class="col-lg-6">
                    <h2 class="mb-1">{{ app.user.name }}</h2>
                    <p class="lead mb-0"><i class="fas fa-envelope me-2"></i>{{ app.user.email }}</p>
                    <div class="mt-3">
                        <span class="badge badge-status {{ app.user.verified ? 'verified' : 'unverified' }}">
                            <i class="fas {{ app.user.verified ? 'fa-check-circle' : 'fa-exclamation-triangle' }} me-1"></i>
                            {{ app.user.verified ? 'Verified Account' : 'Unverified Account' }}
                        </span>
                        {% if twoFactorEnabled %}
                            <span class="badge badge-status verified ms-2">
                                <i class="fas fa-shield-alt me-1"></i> 2FA Enabled
                            </span>
                        {% endif %}
                    </div>
                </div>
                <div class="col-lg-3 text-center text-lg-end mt-4 mt-lg-0">
                    <div class="d-flex flex-column gap-2 align-items-center align-items-lg-end">
                        <a href="#section-personal-info" class="btn btn-light btn-action" data-bs-toggle="tab" data-bs-target="#tab-personal-info">
                            <i class="fas fa-user-edit me-2"></i>Edit Profile
                        </a>
                        {% if not twoFactorEnabled %}
                            <a href="{{ path('app_2fa_setup') }}" class="btn btn-outline-light btn-action">
                                <i class="fas fa-shield-alt me-2"></i>Enable 2FA
                            </a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Left Sidebar - Only visible on larger screens by default -->
        <div class="col-lg-3 mb-4 order-lg-1 order-2">
            <!-- Account Stats -->
            <div class="card profile-card mb-4">
                <div class="card-header bg-transparent d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="fas fa-chart-pie me-2"></i>Account Stats</h5>
                    <button class="btn btn-sm btn-link d-lg-none collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#accountStatsCollapse" aria-expanded="false">
                        <i class="fas fa-chevron-down"></i>
                    </button>
                </div>
                <div class="card-body collapse d-lg-block" id="accountStatsCollapse">
                    <div class="row text-center">
                        {% set incompleteItems = [] %}
                        {% if not app.user.profilePicture %}{% set incompleteItems = incompleteItems|merge(['Set profile picture']) %}{% endif %}
                        {% if not app.user.verified %}{% set incompleteItems = incompleteItems|merge(['Verify your account']) %}{% endif %}
                        {% if not app.user.phoneNumber %}{% set incompleteItems = incompleteItems|merge(['Add phone number']) %}{% endif %}
                        {% if not twoFactorEnabled %}{% set incompleteItems = incompleteItems|merge(['Enable 2FA']) %}{% endif %}
                        
                        {% if incompleteItems|length > 0 %}
                            <div class="alert alert-info mb-0" role="alert">
                                <div class="d-flex">
                                    <div class="me-3">
                                        <i class="fas fa-info-circle fa-2x"></i>
                                    </div>
                                    <div>
                                        <h6 class="alert-heading">Items to complete:</h6>
                                        <ul class="mb-0 ps-3">
                                            {% for item in incompleteItems %}
                                                <li>{{ item }}</li>
                                            {% endfor %}
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        {% else %}
                            <div class="alert alert-success mb-0" role="alert">
                                <div class="d-flex align-items-center">
                                    <div class="me-3">
                                        <i class="fas fa-check-circle fa-2x"></i>
                                    </div>
                                    <div>
                                        <h6 class="alert-heading">Profile complete!</h6>
                                        <p class="mb-0">Your profile is fully set up.</p>
                                    </div>
                                </div>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
            
            <!-- Quick Actions -->
            <div class="card profile-card">
                <div class="card-header bg-transparent">
                    <h5 class="mb-0"><i class="fas fa-bolt me-2"></i>Quick Actions</h5>
                </div>
                <div class="list-group list-group-flush">
                    <a href="#section-personal-info" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center" data-bs-toggle="tab" data-bs-target="#tab-personal-info">
                        <div><i class="fas fa-user-edit me-2"></i>Edit Personal Info</div>
                        <i class="fas fa-chevron-right text-muted"></i>
                    </a>
                    <a href="#section-security" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center" data-bs-toggle="tab" data-bs-target="#tab-security">
                        <div><i class="fas fa-key me-2"></i>Change Password</div>
                        <i class="fas fa-chevron-right text-muted"></i>
                    </a>
                    {% if twoFactorEnabled %}
                        <a href="{{ path('app_2fa_disable') }}" class="list-group-item list-group-item-action list-group-item-success d-flex justify-content-between align-items-center">
                            <div><i class="fas fa-shield-alt me-2"></i>Disable 2FA</div>
                            <span class="badge rounded-pill bg-success">Enabled</span>
                        </a>
                    {% else %}
                        <a href="{{ path('app_2fa_setup') }}" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            <div><i class="fas fa-shield-alt me-2"></i>Enable 2FA</div>
                            <span class="badge rounded-pill bg-warning">Recommended</span>
                        </a>
                    {% endif %}
                    {% if app.user.verified %}
                        <div class="list-group-item list-group-item-success d-flex justify-content-between align-items-center">
                            <div><i class="fas fa-check-circle me-2"></i>Email Verified</div>
                            <span class="badge rounded-pill bg-success">Complete</span>
                        </div>
                    {% else %}
                        <a href="#" class="list-group-item list-group-item-action list-group-item-warning d-flex justify-content-between align-items-center">
                            <div><i class="fas fa-envelope me-2"></i>Verify Email</div>
                            <span class="badge rounded-pill bg-warning">Required</span>
                        </a>
                    {% endif %}
                    {% if "ROLE_DRIVER" not in app.user.roles %}
                    <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <div><i class="fas fa-car me-2"></i>Become a Driver</div>
                        <i class="fas fa-chevron-right text-muted"></i>
                    </a>
                    {% endif %}
                </div>
            </div>
        </div>
        
        <!-- Main Content -->
        <div class="col-lg-9 order-lg-2 order-1 mb-4">
            <div class="card profile-card">
                <div class="card-header bg-white p-0">
                    <ul class="nav nav-tabs card-header-tabs profile-tabs" id="profileTabs" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" id="personal-info-tab" data-bs-toggle="tab" data-bs-target="#tab-personal-info" type="button" role="tab" aria-controls="tab-personal-info" aria-selected="true">
                                <i class="fas fa-user me-1 d-none d-sm-inline-block"></i>Personal Info
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="security-tab" data-bs-toggle="tab" data-bs-target="#tab-security" type="button" role="tab" aria-controls="tab-security" aria-selected="false">
                                <i class="fas fa-shield-alt me-2"></i>Security
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="preferences-tab" data-bs-toggle="tab" data-bs-target="#tab-preferences" type="button" role="tab" aria-controls="tab-preferences" aria-selected="false">
                                <i class="fas fa-cog me-2"></i>Preferences
                            </button>
                        </li>
                    </ul>
                </div>
                <div class="card-body">
                    <div class="tab-content" id="profileTabsContent">
                        <!-- Personal Information Tab -->
                        <div class="tab-pane fade show active" id="tab-personal-info" role="tabpanel" aria-labelledby="personal-info-tab">
                            <h4 class="section-heading mb-4">Personal Information</h4>
                            
                            <form id="profile-edit-form" method="post" action="{{ path('app_profile_change_info') }}">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-floating mb-3">
                                            <input type="text" class="form-control" id="name" name="name" value="{{ app.user.name }}" placeholder="Your Name">
                                            <label for="name">Full Name</label>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating mb-3">
                                            <input type="email" class="form-control" id="email" value="{{ app.user.email }}" placeholder="name@example.com" disabled>
                                            <label for="email">Email Address</label>
                                            <div class="form-text">Email cannot be changed directly. Contact support if needed.</div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating mb-3">
                                            <input type="tel" class="form-control" id="phoneNumber" name="phoneNumber" value="{{ app.user.phoneNumber }}" placeholder="Phone Number">
                                            <label for="phoneNumber">Phone Number</label>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating mb-3">
                                            <input type="date" class="form-control" id="dateOfBirth" name="dateOfBirth" value="{{ app.user.dateOfBirth ? app.user.dateOfBirth|date('Y-m-d') : '' }}" placeholder="Date of Birth">
                                            <label for="dateOfBirth">Date of Birth</label>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating mb-3">
                                            <input type="text" class="form-control" id="location" name="location" value="{{ app.user.location }}" placeholder="Location">
                                            <label for="location">Location</label>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating mb-3">
                                            <select class="form-select" id="gender" name="gender">
                                                <option value="">Select gender</option>
                                                <option value="MALE" {{ app.user.gender and app.user.gender.value == 'MALE' ? 'selected' : '' }}>Male</option>
                                                <option value="FEMALE" {{ app.user.gender and app.user.gender.value == 'FEMALE' ? 'selected' : '' }}>Female</option>
                                            </select>
                                            <label for="gender">Gender</label>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="mt-4 d-flex justify-content-end">
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-save me-2"></i> Save Changes
                                    </button>
                                </div>
                            </form>
                            
                            <hr class="my-4">
                            
                            <h5 class="mb-3">Account Statistics</h5>
                            <div class="row g-3">
                                <div class="col-md-4 col-sm-6 col-12 mb-3">
                                    <div class="card h-100 text-center p-3">
                                        <div class="d-inline-flex justify-content-center mb-2">
                                            <div class="rounded-circle bg-primary bg-opacity-10 p-3">
                                                <i class="fas fa-car fa-2x text-primary"></i>
                                            </div>
                                        </div>
                                        <h3 class="h2 mb-0">0</h3>
                                        <p class="text-muted">Rides Taken</p>
                                    </div>
                                </div>
                                <div class="col-md-4 col-sm-6 col-12 mb-3">
                                    <div class="card h-100 text-center p-3">
                                        <div class="d-inline-flex justify-content-center mb-2">
                                            <div class="rounded-circle bg-success bg-opacity-10 p-3">
                                                <i class="fas fa-star fa-2x text-success"></i>
                                            </div>
                                        </div>
                                        <h3 class="h2 mb-0">0</h3>
                                        <p class="text-muted">Reviews</p>
                                    </div>
                                </div>
                                <div class="col-md-4 col-sm-6 col-12 mb-3">
                                    <div class="card h-100 text-center p-3">
                                        <div class="d-inline-flex justify-content-center mb-2">
                                            <div class="rounded-circle bg-warning bg-opacity-10 p-3">
                                                <i class="fas fa-coins fa-2x text-warning"></i>
                                            </div>
                                        </div>
                                        <h3 class="h2 mb-0">0</h3>
                                        <p class="text-muted">Points Earned</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Security Tab -->
                        <div class="tab-pane fade p-4" id="tab-security" role="tabpanel" aria-labelledby="security-tab">
                            <h4 class="section-heading mb-4">Security Settings</h4>
                            
                            <div class="card mb-4">
                                <div class="card-body">
                                    <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4">
                                        <div class="mb-3 mb-md-0">
                                            <h5 class="mb-1">Password</h5>
                                            <p class="text-muted mb-0">Change your account password</p>
                                        </div>
                                        <button type="button" class="btn btn-primary w-100 w-md-auto" data-bs-toggle="modal" data-bs-target="#changePasswordModal">
                                            <i class="fas fa-key me-2"></i> Change Password
                                        </button>
                                    </div>
                                    
                                    <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center">
                                        <div class="mb-3 mb-md-0">
                                            <h5 class="mb-1">Two-Factor Authentication</h5>
                                            <p class="text-muted mb-0">Add an extra layer of security to your account</p>
                                        </div>
                                        {% if twoFactorEnabled %}
                                            <div class="d-flex flex-column flex-sm-row gap-2 w-100 w-md-auto">
                                                <a href="{{ path('app_2fa_backup_codes') }}" class="btn btn-outline-primary w-100 w-sm-auto mb-2 mb-sm-0">
                                                    <i class="fas fa-key me-2"></i> Backup Codes
                                                </a>
                                                <a href="{{ path('app_2fa_disable') }}" class="btn btn-danger w-100 w-sm-auto">
                                                    <i class="fas fa-shield-alt me-2"></i> Disable 2FA
                                                </a>
                                            </div>
                                        {% else %}
                                            <a href="{{ path('app_2fa_setup') }}" class="btn btn-success w-100 w-md-auto">
                                                <i class="fas fa-shield-alt me-2"></i> Enable 2FA
                                            </a>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                            
                            <div class="row g-3">
                                <div class="col-md-6 col-sm-12 mb-4">
                                    <div class="card h-100">
                                        <div class="card-body">
