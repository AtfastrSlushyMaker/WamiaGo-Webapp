<!DOCTYPE html>

<title>Response index</title>

{% block body %}
    <h1>Response index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id_response</th>
                <th>Content</th>
                <th>Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for response in responses %}
            <tr>
                <td>{{ response.idResponse }}</td>
                <td>{{ response.content }}</td>
                <td>{{ response.date ? response.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_response_show', {'id_response': response.id_response}) }}">show</a>
                    <a href="{{ path('app_response_edit', {'id_response': response.id_response}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_response_new') }}">Create new</a>
{% endblock %}
